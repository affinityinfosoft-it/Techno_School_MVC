@{
    ViewBag.Title = "AccessRights";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
    var reqField = @MvcHtmlString.Create("<span class='required' style='color:red' id='req'>*&nbsp;</span>");
}

<style>
    [type="checkbox"]:not(:checked),
    [type="checkbox"]:checked {
        position: unset;
        left: 0;
        opacity: 1;
        transform: scale(1.2);
        cursor: pointer;
    }
</style>

<section class="content">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>Access Rights</h2>
                    </div>
                    <div class="body">
                        <form>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            &nbsp;@reqField
                                            @Html.DropDownList("RoleId", null, "Select Role", new { @class = "form-control show-tick", required = "required" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            @reqField
                                            @Html.DropDownList("ModuleId", null, "Select Module", new { @class = "form-control show-tick", required = "required" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-2 col-md-2">
                                    <input style="padding:8px;" type="button" value="View" class="btn btn-info" onclick="LoadMenuList()" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="body table-responsive">
                                        <div id="DivMenuList"></div>
                                    </div>
                                </div>
                            </div>

                            <button type="button" id="btnSave" style="padding:10px;" class="btn btn-danger m-t-15 waves-effect" onclick="InsertUpdateAssignRights();">Save</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/Scripts/Appscript/AccessRight.js"></script>
