@model SchoolMVC.Models.BookMaster_BM
@{
    ViewBag.Title = "BookMaster";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
    var reqField = @MvcHtmlString.Create("<span class=\"required\" style=\"color: red\" id=\"req\">*&nbsp;</span>");
}
<link href="~/Content/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
<link href="~/Content/plugins/datepicker/datepicker3.css" rel="stylesheet" />
<section class="content">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            Add new Book Details
                            <small></small>
                        </h2>
                    </div>
                    <div class="body">
                        <form>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label >Book Title :</label>&nbsp;@reqField
                                                @Html.Hidden("BM_BookId")
                                                @Html.EditorFor(model => model.BM_Title, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Book Title" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Book ISBN:</label>&nbsp; @reqField
                                                @Html.EditorFor(model => model.BM_ISBN, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Book ISBN" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Book Author :</label>&nbsp; @reqField
                                                @Html.EditorFor(model => model.BM_Author, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Book Author"} })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Book Publisher :</label>&nbsp; @reqField
                                                @Html.EditorFor(model => model.BM_Publisher, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Book Publisher" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Book Edition :</label>&nbsp; @reqField
                                                @Html.EditorFor(model => model.BM_Edition, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Book Edition" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Book Language :</label>&nbsp; @reqField
                                                @Html.EditorFor(model => model.BM_Language, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Book Language"} })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Class Level :</label>&nbsp; @reqField
                                                @Html.EditorFor(model => model.BM_ClassLevel, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Class Level"} })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Shelf No:</label>&nbsp; @reqField
                                                @Html.EditorFor(model => model.BM_ShelfNo, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Shelf No" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <label>Active:</label>&nbsp; @reqField

                                            @Html.DropDownListFor(
                                                  model => model.BM_IsActive,
                                         new List<SelectListItem>
                                         {
                                             new SelectListItem { Text = "Yes", Value = "Y" },
                                             new SelectListItem { Text = "No", Value = "N" }
                                         },
                                         "--Select--",
                                         new { @class = "form-control" }
                                     )
                                        </div>
                                    </div>
                                </div>               
                            </div>
                            <button type="button" id="btnSave" class="btn btn-danger m-t-15 waves-effect" onclick="InsertUpdateBookMaster();">Save</button>
                            @Html.ActionLink("View List", "BookMasterList", "Library", null, new { @class = "btn btn-danger m-t-15 waves-effect" })
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Vertical Layout | With Floating Label -->
    </div>
</section>

<script src="~/Scripts/Appscript/BookMaster.js"></script>
