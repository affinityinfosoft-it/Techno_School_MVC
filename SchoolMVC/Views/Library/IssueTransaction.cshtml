@model SchoolMVC.Models.IssueTransaction
@{
    ViewBag.Title = "IssueTransaction";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
    var reqField = @MvcHtmlString.Create("<span class=\"required\" style=\"color: red\" id=\"req\">*&nbsp;</span>");

}
@section scripts{
    @Scripts.Render("~/Scripts/Appscript/IssueTransaction.js")
<script src="~/Content/plugins/bootstrap-select/js/bootstrap-select.js"></script>
<script src="~/Content/plugins/bootstrap-select/js/bootstrap-select.min.js"></script>

}
<!-- Bootstrap Select Css -->
<section class="content">
    <div class="container-fluid">

        <!-- Vertical Layout | With Floating Label -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            Issue Transaction Details
                            <small></small>
                        </h2>
                    </div>
                    <div class="body">
                        <form>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="input-group">
                                        <div class="form-line">
                                            @Html.Hidden("IT_IssueId")
                                            <label>Member Type :</label>&nbsp;@reqField
                                            @Html.DropDownList("MTM_TypeId", null, "Select Member Type", new { @class = "form-control show-tick", required = "required" })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="input-group">
                                        <div class="form-line">
                                            <label>Member:</label>&nbsp;@reqField
                                            @Html.DropDownList("IT_MemberId", null, "Select Member", new { @class = "form-control show-tick", required = "required" })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="input-group">
                                        <div class="form-line">
                                            <label>Book Name :</label>&nbsp;@reqField
                                            @Html.DropDownList("BCM_BookId", null, "Select Book Name", new { @class = "form-control show-tick", required = "required" })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="input-group">
                                        <div class="form-line">
                                            <label>Copy Name :</label>&nbsp;@reqField
                                            @Html.DropDownList("IT_CopyId", null, "Select Copy Name", new { @class = "form-control show-tick", required = "required" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Issue Date:</label>&nbsp;@reqField
                                                <div class="datepicker-wrapper">
                                                    @Html.TextBoxFor(m => m.IT_IssueDate, new { @class = "form-control datepicker", @readonly = "readonly", Value = Model.IT_IssueDate })
                                                    <span class="calendar-icon material">
                                                        <i class="material-icons">event</i>
                                                    </span>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                              
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Due Date:</label>&nbsp;@reqField
                                                <div class="datepicker-wrapper">
                                                    @Html.TextBoxFor(m => m.IT_DueDate, new { @class = "form-control datepicker", @readonly = "readonly", Value = Model.IT_DueDate })
                                                    <span class="calendar-icon material">
                                                        <i class="material-icons">event</i>
                                                    </span>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div style="height:20px"></div>
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <input type="button" class="btn btn-success valid" style="padding: 10px;" id="btnAddItems" value="Add book Copy" onclick="AddIssueDetails();" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>
                    <table id="tblList" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th style="display:none">ID</th>
                                @*<th style="display:none">TypeId</th>
                                <th>Member Type</th>*@
                                <th style="display:none">MemberId</th>
                                <th>Member Code</th>
                                <th style="display:none">BookId</th>
                                <th>Book Name</th>
                                <th style="display:none">CopyId</th>
                                <th>Copy Name</th>
                                <th>Issue Date</th>
                                <th>Due Date</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>

                            @if (ViewBag.FilterId != null)
                            {
                                if (ViewBag.DataList != null)
                                {
                                    foreach (var data in ViewBag.DataList)
                                    {
                                        <tr>
                                            <td style="display:none">@data.IT_IssueId</td>
                                            <td style="display:none">@data.MM_MemberId</td>
                                            <td>@data.MM_MemberCode</td>
                                            <td style="display:none">@data.BCM_BookId</td>
                                            <td>@data.BM_Title</td>
                                            <td style="display:none">@data.IT_CopyId</td>
                                            <td>@data.BCM_CopyCode</td>
                                         
                                            <td>@data.IT_IssueDate</td>
                                            <td>@data.IT_DueDate</td>
                                            <td><input type="image" src="~/Content/images/close_icon.png" onclick="deleteRow(this)" alt="button" name="button"></td>
                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                    </table>
                    <button type="button" id="btnSave" class="btn btn-danger m-t-15 waves-effect" onclick="InsertUpdateIssueTransaction();">Save</button>
                    @Html.ActionLink("View List", "BookCopyMasterList", "Library", null, new { @class = "btn btn-danger m-t-15 waves-effect" })
                </div>


                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Vertical Layout | With Floating Label -->
        </div>
    </section>