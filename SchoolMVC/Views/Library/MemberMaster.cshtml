@model SchoolMVC.Models.MemberMaster
@{
    ViewBag.Title = "MemberMaster";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
    var reqField = @MvcHtmlString.Create("<span class=\"required\" style=\"color: red\" id=\"req\">*&nbsp;</span>");
}
<link href="~/Content/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
<link href="~/Content/plugins/datepicker/datepicker3.css" rel="stylesheet" />
<section class="content">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            Add new Member Details
                            <small></small>
                        </h2>
                    </div>
                    <div class="body">
                        <form>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label >Member First Name :</label>&nbsp;@reqField
                                                @Html.Hidden("MM_MemberId")
                                                @Html.EditorFor(model => model.MM_FirstName, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "First name" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Member Last Name:</label>&nbsp; @reqField
                                                @Html.EditorFor(model => model.MM_LastName, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Last name" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Email :</label>&nbsp; @reqField
                                                @Html.EditorFor(model => model.MM_Email, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Email" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Addressr :</label>&nbsp; @reqField
                                                @Html.EditorFor(model => model.MM_Address, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Address"} })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Mobile :</label>&nbsp; @reqField
                                                @Html.EditorFor(model => model.MM_Mobile, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Mobile", @maxlength = "4" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="input-group">
                                        <div class="form-line">
                                            <label>Type :</label>&nbsp;@reqField
                                            @Html.DropDownList("MM_MemberTypeId", null, "Select Member Type", new { @class = "form-control show-tick", required = "required" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <label>Active:</label>&nbsp; @reqField

                                            @Html.DropDownListFor(
                                                  model => model.MM_Active,
                                         new List<SelectListItem>
                                         {
                                             new SelectListItem { Text = "Yes", Value = "Y" },
                                             new SelectListItem { Text = "No", Value = "N" }
                                         },
                                         "--Select--",
                                         new { @class = "form-control" }
                                     )
                                        </div>
                                    </div>
                                </div>
                            <button type="button" id="btnSave" class="btn btn-danger m-t-15 waves-effect" onclick="InsertUpdateBookMaster();">Save</button>
                            @Html.ActionLink("View List", "BookMasterList", "Library", null, new { @class = "btn btn-danger m-t-15 waves-effect" })
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Vertical Layout | With Floating Label -->
    </div>
</section>

<script src="~/Scripts/Appscript/BookMaster.js"></script>
