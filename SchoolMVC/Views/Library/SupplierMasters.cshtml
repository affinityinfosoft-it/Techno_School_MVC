@model SchoolMVC.Models.SupplierMaster
@{
    ViewBag.Title = "SupplierMasters";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
    var reqField = @MvcHtmlString.Create("<span class=\"required\" style=\"color: red\" id=\"req\">*&nbsp;</span>");
}
<link href="~/Content/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery.dataTables.min.js"></script>

<section class="content">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>Supplier Master</h2>
                    </div>
                    <div class="body">
                        <div class="row clearfix">

                            @Html.HiddenFor(model => model.SM_SupplierId)

                            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <div class="form-line">
                                        <label>Supplier Name:</label>&nbsp; @reqField
                                        @Html.TextBoxFor(model => model.SM_SupplierName,
                                         new { @class = "form-control", placeholder = "Supplier Name" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <div class="form-line">
                                        <label>Mobile:</label>&nbsp; @reqField
                                        @Html.TextBoxFor(model => model.SM_Mobile,
                                        new { @class = "form-control", placeholder = "Mobile" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <div class="form-line">
                                        <label>Email:</label>&nbsp; @reqField
                                        @Html.TextBoxFor(model => model.SM_Email,
                                        new { @class = "form-control", placeholder = "Email" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <div class="form-line">
                                        <label>Address:</label>&nbsp; @reqField
                                        @Html.TextBoxFor(model => model.SM_Address,
                                                    new { @class = "form-control", placeholder = "Address" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <div class="form-line">
                                        <label>Active:</label>&nbsp; @reqField

                                        @Html.DropDownListFor(
                                                  model => model.SM_Active,
                                         new List<SelectListItem>
                                         {
                                             new SelectListItem { Text = "Yes", Value = "Y" },
                                             new SelectListItem { Text = "No", Value = "N" }
                                         },
                                         "--Select--",
                                         new { @class = "form-control" }
                                     )
                                    </div>
                                </div>
                            </div>

                        </div>
                        <button class="btn btn-primary waves-effect" type="button" onclick="SaveSupplierMaster()">
                            SUBMIT
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>Supplier Master List</h2>
                    </div>
                    <div class="body table-responsive">
                        <div id="update-panel"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/Scripts/Appscript/SupplierMaster.js"></script>