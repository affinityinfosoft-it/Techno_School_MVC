@model SchoolMVC.Models.ClassMaster_CM
@{
    ViewBag.Title = "Class";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
    var reqField = @MvcHtmlString.Create("<span class=\"required\" style=\"color: red\" id=\"req\">*&nbsp;</span>");

   
}

<!-- Bootstrap Select Css -->
<link href="~/Content/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
<link href="~/Content/plugins/datepicker/datepicker3.css" rel="stylesheet" />
<section class="content">
    <div class="container-fluid">
        @*<div class="block-header">
                <h2>Financial Year Master</h2>
            </div>*@
        <!-- Vertical Layout | With Floating Label -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            Add new Class
                            <small></small>
                        </h2>

                    </div>
                    <div class="body">
                        <form>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">    
                                            <label >Class Type :</label>&nbsp; @reqField
                                     
                                                @Html.Hidden("CM_CLASSID")
                                                @Html.DropDownList("CM_CTM_TYPEID", null, "Select Class Type", new { @class = "form-control show-tick", required = "required" })                                         
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Class Code :</label>&nbsp; @reqField
                                                @Html.EditorFor(model => model.CM_CLASSCODE, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Class Code" , @maxlength="4" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label >Class Name :</label>&nbsp; @reqField
                                                @Html.EditorFor(model => model.CM_CLASSNAME, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Class Name" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>From Age :</label>&nbsp; @reqField
                                                @Html.EditorFor(model => model.CM_FROMAGE, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "From Age" , @maxlength=2 } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">                                                                                            
                                
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label >To Age :</label>&nbsp; @reqField
                                                @Html.EditorFor(model => model.CM_TOAGE, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "To Age" , @maxlength=2 } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label >Class Preference :</label>&nbsp; @reqField
                                                @Html.EditorFor(model => model.CM_Preference, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Preference" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="demo-checkbox">
                                        <input type="hidden" id="hdnchk_Higer" name="hdnchk_Higer" value="@Model.IsHigherSecondary" />
                                        <input type="checkbox" id="chk_Higer" class="filled-in chk-col-green" name="chk_Higer">
                                        <label for="chk_Higer"> Is Higher Secondary :</label>
                                    </div>
                                </div>
                            </div>
                            <button type="button" id="btnSave" class="btn btn-danger m-t-15 waves-effect" onclick="InsertUpdateClass();">Save</button>
                            @Html.ActionLink("View List", "ClassList", "Masters", null, new { @class = "btn btn-danger m-t-15 waves-effect" })
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Vertical Layout | With Floating Label -->
    </div>
</section>
<!-- Jquery Core Js -->
<script src="~/Scripts/Appscript/ClassMasters.js"></script>
