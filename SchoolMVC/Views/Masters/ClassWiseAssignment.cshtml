@model SchoolMVC.Models.AssignmentMaster_ASM

@{
    ViewBag.Title = "ClassWiseAssignment";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
    var reqField = @MvcHtmlString.Create("<span class=\"required\" style=\"color: red\" id=\"req\">*&nbsp;</span>");

}
}
@section scripts{
    <script src="~/Content/plugins/bootstrap-select/js/bootstrap-select.js"></script>
}

<!-- Bootstrap Select Css -->
<link href="~/Content/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
@*<link href="~/Content/plugins/datepicker/datepicker3.css" rel="stylesheet" />*@
<link href="~/Content/plugins/multi-select/css/multi-select.css" rel="stylesheet" />
<link href="~/Content/css/select2.min.css" rel="stylesheet" />
<section class="content">
    <div class="container-fluid">
        <!-- Vertical Layout | With Floating Label -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            Class Wise Assignment
                            <small></small>
                        </h2>
                    </div>
                    <div class="body">
                        <form>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <label>Faculty :</label>

                                    @{var facultySelect = ViewBag.FacultySelect as List<SelectListItem> ?? new List<SelectListItem>();

                                    string selectedFacultyValue = "";

                                    if (Model != null && Model.ASM_FP_Id > 0)
                                    {
                                        selectedFacultyValue = Model.ASM_FP_Id.ToString();
                                    }

                                    var selectedFacultyItem = facultySelect.FirstOrDefault(f => f.Value == selectedFacultyValue);
                                    string selectedFacultyName = selectedFacultyItem != null ? selectedFacultyItem.Text : "";
                                    }

                                    @if (ViewBag.IsFacultyReadonly == true)
                                    {
                                        <input type="text" class="form-control" readonly value="@selectedFacultyName" />
                                        @Html.HiddenFor(m => m.ASM_FP_Id, new { id = "ASM_FP_Id" })
                                    }
                                    else
                                    {
                                        @Html.DropDownListFor(m => m.ASM_FP_Id, new SelectList(facultySelect, "Value", "Text", selectedFacultyValue), "Select Faculty",

                                            new { @class = "form-control  show-tick", data_live_search = "true", data_size = "8", id = "ASM_FP_Id" })
                                    }
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <label>Class :</label>&nbsp;@reqField
                                            @Html.Hidden("ASM_ID")
                                            @Html.DropDownList("ASM_Class_ID", null, "Select Class", new { @class = "form-control show-tick", required = "required", onchange = "AjaxPostForDropDownSection()" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <label>Section :</label>&nbsp;@reqField
                                            <select id="ddlASM_Section_ID" class="form-control show-tick" name="ddlASM_Section_ID">
                                                <option value="0">Select</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <label>Subject Group :</label>
                                            @Html.DropDownList("ASM_SubGr_ID", null, "Select Class", new { @class = "form-control show-tick", required = "required" })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <label>Subject :</label>
                                            @Html.DropDownList("ASM_Sub_ID", null, "Select Class", new { @class = "form-control show-tick", data_live_search = "true", data_size = "8", required = "required" })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Assignment Title :</label>
                                                @Html.EditorFor(model => model.ASM_Title, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Description :</label>
                                                @Html.EditorFor(model => model.ASM_Desc, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Start Date :</label>
                                                <div class="datepicker-wrapper">
                                                    @Html.TextBoxFor(m => m.ASM_StartDate, new { @class = "form-control datepicker", @readonly = "readonly", Value = Model.ASM_StartDateS })
                                                    <span class="calendar-icon material">
                                                        <i class="material-icons">event</i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>End Date :</label>
                                                <div class="datepicker-wrapper">
                                                    @Html.TextBoxFor(m => m.ASM_ExpDate, new { @class = "form-control datepicker", @readonly = "readonly", Value = Model.ASM_ExpDateS })
                                                    <span class="calendar-icon material">
                                                        <i class="material-icons">event</i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <label>Upload File</label>
                                            <input type="file" name="ASM_UploadDoc" id="ASM_UploadDoc" class="form-control">
                                            @if (!string.IsNullOrEmpty(Model.ASM_UploadDoc))
                                            {
                                                <div class="item">
                                                    <a href=@Model.ASM_UploadDoc.Replace("~", "../..") target="_blank">View</a>
                                                    <input type="hidden" id="hdnImage" name="hdnImage" value="@Model.ASM_UploadDoc">
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <button type="button" id="btnSave" class="btn btn-danger m-t-15 waves-effect" onclick="InsertUpdateAssignment();">Save</button>
                            @Html.ActionLink("View List", "ClassWiseAssignmentList", "Masters", null, new { @class = "btn btn-danger m-t-15 waves-effect" })
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Vertical Layout | With Floating Label -->
    </div>
</section>
<!-- Jquery Core Js -->
<script src="~/Scripts/Appscript/AssignmentMaster.js"></script>
