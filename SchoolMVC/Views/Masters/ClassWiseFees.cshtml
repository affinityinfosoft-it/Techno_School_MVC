@model SchoolMVC.Models.ClassWisefees_CF
@{
    ViewBag.Title = "ClassWiseFees";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
    var reqField = @MvcHtmlString.Create("<span class=\"required\" style=\"color: red\" id=\"req\">*&nbsp;</span>");

}
@section scripts{
    @Scripts.Render("~/Scripts/Appscript/ClassWiseFees.js")
<script src="~/Content/plugins/bootstrap-select/js/bootstrap-select.js"></script>
<script src="~/Content/plugins/bootstrap-select/js/bootstrap-select.min.js"></script>

}
<!-- Bootstrap Select Css -->
<section class="content">
    <div class="container-fluid">

        <!-- Vertical Layout | With Floating Label -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            Class wise fees Settings
                            <small></small>
                        </h2>
                    </div>
                    <div class="body">
                        <form>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">   
                                            @Html.Hidden("CF_CLASSFEESID")
                                            <label>Class :</label>
                                            @Html.Hidden("Class")
                                            @Html.ListBox("CF_CLASSID",(IEnumerable<SelectListItem>)ViewBag.CF_CLASSID,new{@class = "form-control show-tick selectpicker", multiple = "multiple", data_live_search = "true",data_actions_box = "true",title = "Select Class" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <label>Fees Category :</label>&nbsp;@reqField
                                            @Html.DropDownList("CF_CATEGORYID", null, "Select Fees Category", new { @class = "form-control show-tick", required = "required" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <label>Fees Head :</label>&nbsp;@reqField
                                            @Html.DropDownList("CF_FEESID", null, "Select Fees Head", new { @class = "form-control show-tick", required = "required" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>No of Installment :</label>&nbsp;@reqField
                                                @Html.EditorFor(model => model.CF_NOOFINS, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "No of Installments", @readonly = "readonly" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Amount :</label>&nbsp;@reqField
                                                @Html.EditorFor(model => model.CF_FEESAMOUNT, new { htmlAttributes = new { @class = "form-control allow_decimal", required = "required", placeholder = "Amount", @maxlength = "10" } })

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Installment Amount :</label>&nbsp;@reqField
                                                @Html.EditorFor(model => model.CF_INSAMOUNT, new { htmlAttributes = new { @class = "form-control allow_decimal", required = "required", placeholder = "Installments Amount", @readonly = "readonly" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <!--  New First Due Date Field -->
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>First Due Date :</label>
                                                <div class="datepicker-wrapper">
                                                    <input id="FirstDueDate" name="FirstDueDate" class="form-control datepicker" readonly />
                                                    <span class="calendar-icon material">
                                                        <i class="material-icons">event</i>
                                                    </span>
                                                </div>
                                             </div>
                                        </div>
                                    </div>
                                </div>



                                <div style="display:none;">
                                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                        <div class="demo-masked-input">
                                            <div class="input-group">
                                                <div class="form-line">
                                                    <label>Installment No :</label>&nbsp;@reqField
                                                    @Html.EditorFor(model => model.CF_INSTALLMENTNO, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Installment No." } })

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                        <div class="demo-masked-input">
                                            <div class="input-group">
                                                <div class="form-line">
                                                    <label>Due Date :</label>&nbsp;@reqField
                                                    @Html.EditorFor(model => model.CF_DUEDATE, new { htmlAttributes = new { @class = "form-control Date01", required = "required", placeholder = "Due Date" } })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div style="height:20px"></div>
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <input type="button" class="btn btn-success valid" style="padding: 10px;" id="btnAddItems" value="Add Item" onclick="AddDetails();" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <table id="tblList" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th style="display:none">ID</th>
                                        <th style="display:none">ClassID</th>
                                        <th>Class</th>
                                        <th style="display:none">FeesCatId</th>
                                        <th>Fees Category</th>
                                        <th style="display:none">FeesHeadId</th>
                                        <th>Fees Head</th>
                                        <th>Amount</th>
                                        <th>Installment Amount</th>
                                        <th>No of Installment</th>
                                        <th>Installment No</th>
                                        <th>Due Date</th>
                                        <th style="display:none">IsAdmissionTime</th>
                                        @*<th>Edit</th>*@
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @if (ViewBag.FilterId != null)
                                    {
                                        if (ViewBag.DataList != null)
                                        {
                                            foreach (var data in ViewBag.DataList)
                                            {
                                                <tr>
                                                    <td style="display:none">@data.CF_CLASSFEESID</td>
                                                    <td style="display:none">@data.CF_CLASSID</td>
                                                    <td>@data.ClassName</td>
                                                    <td style="display:none">@data.CF_CATEGORYID</td>
                                                    <td>@data.Category</td>
                                                    <td style="display:none">@data.CF_FEESID</td>
                                                    <td>@data.FeesHeadName</td>
                                                    <td>@data.CF_FEESAMOUNT</td>
                                                    <td>@data.CF_INSAMOUNT</td>
                                                    <td>@data.CF_NOOFINS</td>
                                                    <td>@data.CF_INSTALLMENTNO</td>
                                                    <td>@data.Testdata</td>
                                                    <td style="display:none">@data.IsAdmissionTime</td>
                                                        @*<td><a onclick="EditDetails(this);" class="btn btn-warning" href="#">Edit</a></td>*@
                                                        <td><input type="image"  src="~/Content/images/close_icon.png" onclick="deleteRow(this)" alt="button" name="button"></td>
                                                    </tr>
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>
                                <button type="button" id="btnSave" class="btn btn-danger m-t-15 waves-effect" onclick="InsertUpdateClassFees();">Save</button>
                                @Html.ActionLink("View List", "ClasswiseFeesList", "Masters", null, new { @class = "btn btn-danger m-t-15 waves-effect" })
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Vertical Layout | With Floating Label -->
        </div>
    </section>