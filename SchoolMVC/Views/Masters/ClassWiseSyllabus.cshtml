@model SchoolMVC.Models.ClassWiseSyllabusMasters_CWSM

@{
    ViewBag.Title = "ClassWiseSyllabus";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
    var reqField = @MvcHtmlString.Create("<span class=\"required\" style=\"color: red\" id=\"req\">*&nbsp;</span>");

}
<!-- Bootstrap Select Css -->
<link href="~/Content/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
<link href="~/Content/plugins/datepicker/datepicker3.css" rel="stylesheet" />
<section class="content">
    <div class="container-fluid">
        <!-- Vertical Layout | With Floating Label -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            Class wise Syllabus 
                            <small></small>
                        </h2>
                    </div>
                    <div class="body">
                        <form>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Class :</label>&nbsp;@reqField
                                                @Html.Hidden("Class_Id")
                                                @Html.Hidden("SM_Id")
                                                @Html.DropDownList("SM_ClassId", null, "Select Class", new { @class = "form-control show-tick", required = "required" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Syllabus Name :</label> &nbsp;@reqField
                                                @Html.EditorFor(model => model.SM_SyllabusName, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Syllabus Name" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <label>Upload File</label>&nbsp;@reqField
                                            <input type="file" name="SM_UploadFile" id="SM_UploadFile" class="form-control">
                                            @if (!string.IsNullOrEmpty(Model.SM_UploadFile))
                                            {
                                                <div class="item">
                                                    <a href=@Model.SM_UploadFile.Replace("~", "../..") target="_blank">View</a>
                                                    <input type="hidden" id="hdnImage" name="hdnImage" value="@Model.SM_UploadFile">
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div> 
                            <button type="button" id="btnSave" class="btn btn-danger m-t-15 waves-effect" onclick="InsertUpdateSyllabus();">Save</button>
                            @Html.ActionLink("View List", "ClassWiseSyllabusList", "Masters", null, new { @class = "btn btn-danger m-t-15 waves-effect" })
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Vertical Layout | With Floating Label -->
    </div>
</section>
<script src="~/Scripts/Appscript/SyllabusMaster.js"></script>