@model SchoolMVC.Models.FormMaster_FM
@{
    ViewBag.Title = "FormMaster";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
    var reqField = @MvcHtmlString.Create("<span class=\"required\" style=\"color: red\" id=\"req\">*&nbsp;</span>");

}
<!-- Bootstrap Select Css -->
<link href="~/Content/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
<link href="~/Content/plugins/datepicker/datepicker3.css" rel="stylesheet" />
<section class="content">
    <div class="container-fluid">
        <!-- Vertical Layout | With Floating Label -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            Add new Form
                            <small></small>
                        </h2>

                    </div>
                    <div class="body">
                        <form>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Form Amount :</label>&nbsp;@reqField
                                                @Html.Hidden("FM_Form_Id")
                                                @Html.EditorFor(model => model.FM_FormAmount, new { htmlAttributes = new { @class = "form-control", @type = "number", @step = "0.01", required = "required", placeholder = "Enter Form Amount" } })
                    
                                            </div>
                                        </div>
                                    </div>
                                </div>

                               
                            </div>
                            <button type="button" id="btnSave" class="btn btn-danger m-t-15 waves-effect" onclick="InsertUpdateForm();">Save</button>
                            @Html.ActionLink("View List", "FormMasterList", "Masters", null, new { @class = "btn btn-danger m-t-15 waves-effect" })
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Vertical Layout | With Floating Label -->
    </div>
</section>
<!-- Jquery Core Js -->
<script src="~/Scripts/Appscript/FormMaster.js"></script>
