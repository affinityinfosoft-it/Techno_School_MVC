@model  SchoolMVC.Models.LeaveType_LT
@{
    ViewBag.Title = "LeaveType";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
    var reqField = @MvcHtmlString.Create("<span class=\"required\" style=\"color: red\" id=\"req\">*&nbsp;</span>");

}

<!-- Bootstrap Select Css -->
<link href="~/Content/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
<link href="~/Content/plugins/datepicker/datepicker3.css" rel="stylesheet" />
<!-- Jquery Core Js -->
@*<script src="~/Content/plugins/jquery/jquery.min.js"></script>*@
<section class="content">
    <div class="container-fluid">
        @*<div class="block-header">
                <h2>Financial Year Master</h2>
            </div>*@
        <!-- Vertical Layout | With Floating Label -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            Leave Type
                            <small></small>
                        </h2>
                    </div>
                    <div class="body">
                        <form>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>LeaveType Code :</label>&nbsp;@reqField
                                                @Html.Hidden("LeaveTypeId")
                                                @Html.EditorFor(model => model.LeaveTypeCode, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Enter Leave Code" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>LeaveType Name :</label>&nbsp;@reqField
                                                @Html.EditorFor(model => model.LeaveTypeName, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "LeaveType Name" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Leave Category :</label>&nbsp;@reqField
                                                @Html.DropDownListFor(model => model.LeaveCategory,
                    new SelectList(new[]
                    {
                        new { Value = "Teachers", Text = "Teachers" },
                        new { Value = "Student", Text = "Student" }
                    }, "Value", "Text"),
                    "Select Category",
                    new { @class = "form-control", required = "required" })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <button type="button" id="btnSave" class="btn btn-danger m-t-15 waves-effect" onclick="InsertUpdateLeaveType();">Save</button>
                            @Html.ActionLink("View List", "LeaveTypeList", "Masters", null, new { @class = "btn btn-danger m-t-15 waves-effect" })
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Vertical Layout | With Floating Label -->
    </div>
</section>
<script src="~/Scripts/Appscript/LeaveTypeMaster.js"></script>



