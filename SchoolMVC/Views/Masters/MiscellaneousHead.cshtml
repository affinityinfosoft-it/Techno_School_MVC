
@model SchoolMVC.Models.MiscellaneousHeadMaster_MISC
@{
    ViewBag.Title = "MiscellaneousHead";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
    var reqField = @MvcHtmlString.Create("<span class=\"required\" style=\"color: red\" id=\"req\">*&nbsp;</span>");

}
<!-- Bootstrap Select Css -->
<link href="~/Content/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
<section class="content">
    <div class="container-fluid">
        @*<div class="block-header">
                <h2>Financial Year Master</h2>
            </div>*@
        <!-- Vertical Layout | With Floating Label -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            Miscellaneous Head
                            <small></small>
                        </h2>

                    </div>
                    <div class="body">
                        <form>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Miscellaneous Code :</label>
                                                @Html.Hidden("MISC_Id")
                                                @Html.EditorFor(model => model.MISC_FeeHeadCode, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Miscellaneous Code" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Miscellaneous Head :</label>&nbsp;@reqField
                                                @Html.EditorFor(model => model.MISC_FeeHeadName, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Miscellaneous Head" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Amount :</label>
                                                @Html.EditorFor(model => model.MISC_Amount, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Amount" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                            </div>
                            <button type="button" id="btnSave" class="btn btn-danger m-t-15 waves-effect" onclick="InsertUpdateMiscellaneousHead();">Save</button>
                            @Html.ActionLink("View List", "MiscellaneousHeadList", "Masters", null, new { @class = "btn btn-danger m-t-15 waves-effect" })
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Vertical Layout | With Floating Label -->
    </div>
</section>
<!-- Jquery Core Js -->

<script src="~/Scripts/Appscript/MiscellaneousHead.js"></script>
