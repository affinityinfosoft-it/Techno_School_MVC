@model SchoolMVC.Models.SectionMaster_SECM
@{
    ViewBag.Title = "Section";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
    var reqField = @MvcHtmlString.Create("<span class=\"required\" style=\"color: red\" id=\"req\">*&nbsp;</span>");

}
<!-- Bootstrap Select Css -->
@*<link href="~/Content/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
    <link href="~/Content/plugins/datepicker/datepicker3.css" rel="stylesheet" />*@
@*<input type="hidden" id="hdnUserid" value="@UserModel.UM_USERID" />*@
<div class="modal fade" id="sectionModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content custom-modal">
            <div class="modal-header">
                <h5 class="modal-title">Existing Sections</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-hover table-sm table-striped" id="modalSectionTable">
                    <thead class="thead-light">
                        <tr>
                            <th>Section Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Dynamically filled -->
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light btn-sm" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<style>
    /* Custom modal styling */
.custom-modal {
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.15);
}

.custom-modal .modal-header {
    background: linear-gradient(45deg, #4CAF50, #2E7D32);
    color: #fff;
    padding: 0.6rem 1rem;
}

.custom-modal .modal-header .close {
    color: white;
    opacity: 0.8;
    font-size: 1.2rem;
}
.custom-modal .modal-header .close:hover {
    opacity: 1;
}

.custom-modal .modal-body {
    padding: 0.75rem;
}

#modalSectionTable thead {
    background-color: #f8f9fa;
    font-weight: bold;
}

#modalSectionTable tbody tr:hover {
    background-color: #e9f7ef;
    cursor: pointer;
    transition: background-color 0.2s ease;
}
</style>
<section class="content">
    <div class="container-fluid">
        @*<div class="block-header">
                <h2>Financial Year Master</h2>
            </div>*@
        <!-- Vertical Layout | With Floating Label -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            Add new Section
                            <small></small>
                        </h2>

                    </div>
                    <div class="body">
                        <form>
                            @Html.HiddenFor(m => m.CM_CLASSID)
                            <div class="row">


                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Class :</label>&nbsp;@reqField
                                                @Html.Hidden("SECM_SECTIONID")
                                                @Html.DropDownList("SECM_CM_CLASSID", null, "Select Class", new { @class = "form-control show-tick", required = "required" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Section :</label>&nbsp;@reqField
                                                @Html.EditorFor(model => model.SECM_SECTIONNAME, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Section Name", @maxlength = "50" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <input type="button" class="btn btn-success valid" id="btnAddItems" value="Add Item" onclick="AddDetails();" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <table id="tblList" class="table table-bordered table-striped">
                                <thead>
                                    <tr>

                                        <th style="display:none">Class Id</th>
                                        <th>Class</th>
                                        <th>Section</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @if (ViewBag.FilterId != null)
                                    {
                                        if (ViewBag.DataList != null)
                                        {
                                            var s = ViewBag.DataList;
                                            foreach (var data in ViewBag.DataList)
                                            {
                                                <tr>

                                                    <td style="display:none">@data.SECM_CM_CLASSID</td>
                                                    <td>@data.SECM_CM_CLASSNAME</td>
                                                    <td>@data.SECM_SECTIONNAME</td>
                                                    <td><input type="image" src="~/Content/images/delete.png" onclick="deleteRow(this)" alt="button" name="button"></td>
                                                </tr>
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                            <button type="button" id="btnSave" class="btn btn-danger m-t-15 waves-effect" onclick="InsertUpdateSection();">Save</button>
                            @Html.ActionLink("View List", "SectionList", "Masters", null, new { @class = "btn btn-danger m-t-15 waves-effect" })
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Vertical Layout | With Floating Label -->
    </div>
</section>

<script src="~/Scripts/Appscript/SectionMasters.js"></script>
