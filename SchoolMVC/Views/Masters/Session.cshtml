@model SchoolMVC.Models.SessionMasters_SM
@{
    ViewBag.Title = "Session";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
    var reqField = @MvcHtmlString.Create("<span class=\"required\" style=\"color: red\" id=\"req\">*&nbsp;</span>");

}

<!-- Bootstrap Select Css -->
<link href="~/Content/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
@*<link href="~/Content/plugins/datepicker/datepicker3.css" rel="stylesheet" />*@
@*<link href="~/Content/plugins/datepicker/datepicker3.css" rel="stylesheet" />*@
<section class="content">
    <div class="container-fluid">
        @*<div class="block-header">
            <h2>Financial Year Master</h2>
        </div>*@
        <!-- Vertical Layout | With Floating Label -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            Add a Session
                            <small></small>
                        </h2>
                       
                    </div>
                    <div class="body">
                        <form>
                            <div class="row">
                               

                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                               <label>Start Date :</label>&nbsp;@reqField
                                                <div class="datepicker-wrapper">
                                                    @Html.TextBoxFor(m => m.SM_STARTDATE, new { @class = "form-control datepicker", @readonly = "readonly", Value = Model.SM_STARTDATES })
                                                    <span class="calendar-icon material">
                                                        <i class="material-icons">event</i>
                                                    </span>
                                                </div>
                                                @*@Html.EditorFor(model => model.SM_STARTDATE, new { htmlAttributes = new { @class = "form-control Date01", required = "required", placeholder = "Start Date" } })*@
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label >End Date :</label>&nbsp;@reqField
                                                <div class="datepicker-wrapper">
                                                    @Html.Hidden("SM_SESSIONID")
                                                    @Html.TextBoxFor(m => m.SM_ENDDATE, new { @class = "form-control datepicker", @readonly = "readonly", Value = Model.SM_ENDDATES })
                                                    <span class="calendar-icon material">
                                                        <i class="material-icons">event</i>
                                                    </span>
                                                </div>
                                              
                                                @*@Html.EditorFor(model => model.SM_ENDDATE, new { htmlAttributes = new { @class = "form-control Date01", required = "required", placeholder = "End Date" } })*@
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                           @{ if ((bool)Session["CanSubmit"] == true)
                            {
                                <button type="button" id="btnSave" class="btn btn-danger m-t-15 waves-effect" onclick="InsertUpdateSession();">Save</button>

                            }
                           }
                            @Html.ActionLink("View List", "SessionList", "Masters", null, new { @class = "btn btn-danger m-t-15 waves-effect" })
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Vertical Layout | With Floating Label -->
    </div>
</section>
<!-- Jquery Core Js -->

<script src="~/Scripts/Appscript/SessionMasters.js"></script>

