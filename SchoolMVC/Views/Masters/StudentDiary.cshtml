@model SchoolMVC.Models.StudentDiary_STD
@{
    ViewBag.Title = "StudentDiary";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
    var reqField = @MvcHtmlString.Create("<span class=\"required\" style=\"color: red\" id=\"req\">*&nbsp;</span>");

}
}
@section scripts{

    <script src="~/Content/plugins/bootstrap-select/js/bootstrap-select.js"></script>

}
<!-- Bootstrap Select Css -->
<link href="~/Content/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
<link href="~/Content/plugins/multi-select/css/multi-select.css" rel="stylesheet" />
<link href="~/Content/css/select2.min.css" rel="stylesheet" />
<section class="content">
    <div class="container-fluid">
        <!-- Vertical Layout | With Floating Label -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            Student Diary Management
                            <small></small>
                        </h2>
                    </div>
                    <input type="hidden" id="hdnClassId" value="@Model.ClassId" />
                    <input type="hidden" id="hdnSectionId" value="@Model.SectionId" />
                    <div class="body">
                        <form>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <label>Class :</label>&nbsp;@reqField
                                            @Html.Hidden("DiaryId")
                                            @Html.DropDownList("ClassId", null, "Select Class", new { @class = "form-control show-tick", required = "required", onchange = "AjaxPostForDropDownSection()" })


                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <label>Section :</label>&nbsp;@reqField
                                            <select id="ddlSectionId" class="form-control show-tick" name="ddlSectionId">
                                                <option value="0">Select</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>StudentId :</label>
                                                @Html.EditorFor(model => model.StudentId, new { htmlAttributes = new { @class = "form-control", required = "required", type = "text", placeholder = "Enter Student ID" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Date :</label>
                                                <div class="datepicker-wrapper">
                                                    @Html.TextBoxFor(m => m.ApDate, new { @class = "form-control datepicker", @readonly = "readonly", Value = Model.ApDateS })
                                                    <span class="calendar-icon material">
                                                        <i class="material-icons">event</i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Type :</label>
                                                @Html.DropDownListFor(model => model.DiaryType,
                    new List<SelectListItem>
                    {
                        new SelectListItem { Text = "Homework", Value = "Homework" },
                        new SelectListItem { Text = "Classwork updates", Value = "Classwork updates" },
                        new SelectListItem { Text = "Announcements", Value = "Announcements" },
                        new SelectListItem { Text = "Behavioral notes", Value = "Behavioral notes" },
                        new SelectListItem { Text = "Exam reminders", Value = "Exam reminders" },
                        new SelectListItem { Text = "Activity updates", Value = "Activity updates" },
                        new SelectListItem { Text = "Others", Value = "Others" }
                    },
                    "-- Select Description --",
                    new { @class = "form-control dropdown-down" })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Topic :</label>&nbsp;@reqField
                                                @Html.EditorFor(model => model.Topic, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <label>Upload Attachments</label>
                                            <input type="file" name="AttachmentPath" id="AttachmentPath" class="form-control">
                                            @if (!string.IsNullOrEmpty(Model.AttachmentPath))
                                            {
                                                <div class="item">
                                                    <a href=@Model.AttachmentPath.Replace("~", "../..") target="_blank">View</a>
                                                    <input type="hidden" id="hdnImage" name="hdnImage" value="@Model.AttachmentPath">
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>

                            </div>



                            <button type="button" id="btnSave" class="btn btn-danger m-t-15 waves-effect" onclick="InsertUpdateStudentDiary();">Save</button>
                            @Html.ActionLink("View List", "StudentDiaryList", "Masters", null, new { @class = "btn btn-danger m-t-15 waves-effect" })
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Vertical Layout | With Floating Label -->
    </div>
</section>
<!-- Jquery Core Js -->

<script src="~/Scripts/Appscript/StudentDiary.js"></script>

<style>
    .dropdown-down {
        direction: ltr; /* Make sure it opens left-to-right */
    }

    /* If you're using bootstrap-select or similar plugin */
    .bootstrap-select .dropdown-menu {
        top: 100% !important;
        bottom: auto !important;
        transform: translateY(0) !important;
    }
</style>