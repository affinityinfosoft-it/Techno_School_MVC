@model SchoolMVC.Models.SubjectGroupWiseSubjectSetting_SGS
@{
    ViewBag.Title = "SubjectGroupWiseSubject";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
}
<!-- Bootstrap Select Css -->
<link href="~/Content/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
<link href="~/Content/plugins/datepicker/datepicker3.css" rel="stylesheet" />
<link href="~/Content/plugins/multi-select/css/multi-select.css" rel="stylesheet">
<section class="content">
    <div class="container-fluid">
        @*<div class="block-header">
                <h2>Financial Year Master</h2>
            </div>*@
        <!-- Vertical Layout | With Floating Label -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            Subject Group wise Subject Mapping
                            <small></small>
                        </h2>

                    </div>
                    <div class="body">
                        <form>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                @Html.Hidden("SGS_Id")
                                                @Html.DropDownList("SGS_GM_Id", null, "Select Subject Group", new { @class = "form-control show-tick", required = "required" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                @Html.DropDownList("SGS_SM_Id", null, "Select Subject", new { @class = "form-control show-tick", required = "required"})
                                            </div>
                                        </div>
                                    </div>
                                </div>                                                             
                            </div>
                            
                            <button type="button" id="btnSave" class="btn btn-danger m-t-15 waves-effect" onclick="InsertUpdateSubjectGroupWiseSub();">Save</button>
                            @Html.ActionLink("View List", "SubjectGroupWiseSubjectList", "Masters", null, new { @class = "btn btn-danger m-t-15 waves-effect" })
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Vertical Layout | With Floating Label -->
    </div>
</section>
