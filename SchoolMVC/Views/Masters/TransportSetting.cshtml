@model SchoolMVC.Models.StudetDetails_SD
@{
    ViewBag.Title = "TransportSetting";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
    var reqField = @MvcHtmlString.Create("<span class=\"required\" style=\"color: red\" id=\"req\">*&nbsp;</span>");

}

@section scripts{
    @Scripts.Render("~/Scripts/Appscript/TransportSetiing.js")

}
<!-- Bootstrap Select Css -->
<link href="~/Content/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
<link href="~/Content/plugins/datepicker/datepicker3.css" rel="stylesheet" />
<style>
    /* Remove default checkbox */
    [type="checkbox"]:not(:checked),
    [type="checkbox"]:checked {
        position: unset;
        left: 0px;
        opacity: unset;
    }
</style>
<section class="content">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h3>
                             Transport Settings
                            @*@{ if ((bool)Session["CanAdd"] == true)
                             {*@
                            <a href="~/Masters/TransportAvailedList" role="button"class="btn bg-cyan waves-effect"> View List</a>
                             @*}
                            }*@
                            <small></small>
                        </h3>
                    </div>
                    <div class="body">
                        <form>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Class :</label>&nbsp;@reqField
                                                @*@Html.Hidden("SWS_Id")*@
                                                @Html.DropDownList("SD_ClassId", null, "Select Class", new { @class = "form-control show-tick", required = "required" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Section :</label>&nbsp;@reqField
                                                <select id="ddlSWS_SecId" class="form-control show-tick" name="ddlSWS_SecId">
                                                    <option value="0">Select</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Student Id :</label>&nbsp;@reqField
                                                @Html.Hidden("classid")
                                                @Html.EditorFor(model => model.SD_StudentId, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Student Id" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Student Name :</label>&nbsp;@reqField
                                                @Html.EditorFor(model => model.SD_StudentName, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Student Name" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="button" id="btnSearch" class="btn btn-danger m-t-15 waves-effect">Search</button>

                            <div class="ln_solid"></div>
                            <div id="myModalStudentData" class="modal fade" role="dialog">
                                <div class="modal-dialog">

                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title">Set Transportaion :</h4>
                                        </div>
                                        <div class="modal-body">

                                            <div class="row">

                                                <div class="row" id="dvTrans">
                                                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                                        <div class="demo-masked-input">
                                                            <div class="input-group">
                                                                <label>Route</label> &nbsp;@reqField
                                                                @Html.Hidden("hdnRTId")
                                                                @Html.Hidden("hdnTTId")
                                                                @Html.DropDownList("SD_RouteId", null, "Select Route", new { @class = "form-control show-tick", required = "required" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                                        <div class="demo-masked-input">
                                                            <div class="input-group">
                                                                <label>Type</label> &nbsp;@reqField
                                                                @Html.DropDownList("SD_TransportTypeId", null, "Select Type", new { @class = "form-control show-tick", required = "required" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" id="dvpickUp" style="display:none">
                                                        <div class="demo-masked-input">
                                                            <div class="input-group">
                                                                <label>Pick Up Location</label>&nbsp;@reqField
                                                                <select id="ddlPickUpLocation" class="form-control show-tick" name="ddlPickUpLocation" data-feesid="0">
                                                                    <option value="0">Select Pick Up Location</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" id="dvdropLocation" style="display:none">
                                                        <div class="demo-masked-input">
                                                            <div class="input-group">
                                                                <label>Drop Location</label> &nbsp;@reqField
                                                                <select id="ddlDropLocation" class="form-control show-tick" name="ddlDropLocation" data-feesid="0">
                                                                    <option value="0">Select Drop Location</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row" id="dvTransRate">
                                                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                                        <div class="demo-masked-input">
                                                            <div class="input-group">
                                                                <div class="form-line">
                                                                    <label>Fare</label>&nbsp;@reqField
                                                                    @Html.EditorFor(model => model.SD_TransportFare, new { htmlAttributes = new { @class = "form-control allow_decimal", required = "required", placeholder = "Fare", @maxlength = "10", @readonly = "readonly" } })
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                                        <div class="demo-masked-input">
                                                            <div class="input-group">
                                                                <label>From Month</label>&nbsp;@reqField
                                                                @Html.DropDownList("ddlMonth", null, "Select Month", new { @class = "form-control show-tick", required = "required" })

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div style="height: 24px"></div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <input type="button" id="btnSave" class="btn btn-primary" value="Save" />
                                            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="table-responsive">
                                <div id="update-panel"></div>

                            </div>
                            @*<div class="row">
                <div class="body table-responsive">
                    <table id="tblStudent" class="table table-hover">
                        <thead>
                            <tr class="headings">


                                <th>Student Id</th>

                                <th>Student Name</th>
                                <th>Class </th>

                                <th>
                                    <input type="checkbox" id="CheckAll" />Select All
                                </th>
                            </tr>

                        </thead>
                    </table>
                </div>
            </div>*@
                            <div style="height: 24px"></div>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            
                                                <input type="button" id="btnAssign" class="btn btn-success" value="Set Transport" />
                                            

                                        </div>
                                    </div>
                                </div>
                                    </div>
                                    <div>
                                        <br />
                                        <br />
                                        <br />
                                    </div>


                                    <div style="height: 24px"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Vertical Layout | With Floating Label -->
    </div>
</section>

