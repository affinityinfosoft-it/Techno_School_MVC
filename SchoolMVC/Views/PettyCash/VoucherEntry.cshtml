@model SchoolMVC.Models.AccountLedger
@{
    ViewBag.Title = @Model.VoucherType + " Voucher Entry";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";

}
@section scripts{
    @Scripts.Render("~/Scripts/Appscript/VoucheEntry.js")


}
<!-- Bootstrap Select Css -->

      <input id="btnAddEnable" name="btnAddEnable" type="hidden" value="0" />
        <input id="btnEditEnable" name="btnEditEnable" type="hidden" value="0" />
        <input id="btnViewEnable" name="btnViewEnable" type="hidden" value="0" />
        <input id="btnDeleteEnable" name="btnDeleteEnable" type="hidden" value="0" />
        <input type="hidden" id="hdnCollegeId" value="@ViewBag.CollegeId" />
        <input type="hidden" id="hdnSessionId" name="hdnSessionId" value="@ViewBag.SessionId" />
        <input type="hidden" id="LD_VoucherTypeId" name="LD_VoucherTypeId" value="@Model.LD_VoucherTypeId" />

      
        <input id="hdnRollId" name="hdnRollId" type="hidden" value="@ViewBag.RoleId" />
        <input id="hdnPaymentId" name="hdnPaymentId" type="hidden" value="0" />
<section class="content">
    <div class="container-fluid">
        <!-- Vertical Layout | With Floating Label -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            @Model.VoucherType Voucher Entry
                            <small></small>
                        </h2>
                    </div>
                    <div class="body">
                      @using (Html.BeginForm("VoucherEntry", "PettyCash", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "FormSubmit", name = "FormSubmit", @class = "", role = "form", autocomplete = "off" }))
                      {
                            <div class="row">
                             
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label for="txtDateS">Date:</label>
                                                <div class="datepicker-wrapper">
                                                    <input id="txtDateS" name="txtDateS" class="form-control datepicker" value="@Model.LD_DateSS" readonly   />
                                                    <span class="calendar-icon material">
                                                        <i class="material-icons">event</i>
                                                    </span>
                                                </div>
                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label for="txtVoucherNo">Voucher No:</label>
                                                <input id="txtVoucherNo" name="txtVoucherNo" class="form-control" value="@Model.LD_VoucherNo" readonly />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                           
                                                @if (Model.LD_VoucherTypeId == 1)
                                                {
                                                    <label for="ddlAccount">Account List<span style="color:red">(Cr.)</span>:</label>
                                                }
                                                else if (Model.LD_VoucherTypeId == 2)
                                                {
                                                    <label for="ddlAccount">Account List<span style="color:red">(Dr.)</span>:</label>

                                                }
                                                else
                                                {
                                                    <label for="ddlAccount">Account List:</label>
                                                }
                                                <select id="ddlAccount" name="ddlAccount" class="form-control show-tick">
                                                    <option value="0">Select</option>
                                                    @foreach (var item in Model.AccountList)
                                                    {
                                                        if (Model.AccountValue == item.Value)
                                                        {
                                                            <option value="@item.Value" selected>@item.Text</option>
                                                        }
                                                        else
                                                        {
                                                            <option value="@item.Value">@item.Text</option>
                                                        }

                                                    }
                                                </select>
                                          
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label for="txtChequeNo">Cheque No:</label>
                                                <input id="txtChequeNo" name="txtChequeNo" class="form-control" value="@Model.LD_ChequeNo" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label for="txtChequeNo">Cheque Date:</label>
                                                <div class="datepicker-wrapper">
                                                    <input id="txtChequeDate" name="txtChequeDate" class="form-control datepicker" value="@Model.LD_ChequeDateS" readonly />
                                                    <span class="calendar-icon material">
                                                        <i class="material-icons">event</i>
                                                    </span>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label for="txtReferenceNo">Reference No:</label>
                                                <input id="txtReferenceNo" name="txtReferenceNo" class="form-control" value="@Model.LD_ReferenceNo" />
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <!-- 🔹 New First Due Date Field -->
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label for="LD_Payee">Payee/Rec:</label>
                                                <input id="txtPayee" name="txtPayee" class="form-control" value="@Model.LD_Payee" />
                                            </div>
                                        </div>
                                    </div>
                                </div>



                              
                                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                        <div class="demo-masked-input">
                                            <div class="input-group">
                                                <div class="form-line">
                                                    <label for="txtNarration" style="margin-top:10px;">Narration:</label>
                                                    <textarea id="txtNarration" name="txtNarration" class="form-control" style="max-width: 100% !important;">@Model.LD_Narration</textarea>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    </div>
                                 <div class="header">
                                     <h2>
                                         Entry Details
                                         <small></small>
                                     </h2>
                                 </div>
                               <div class="row">
                                   <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                       <div class="demo-masked-input">
                                           <div class="input-group">
                                             
                                                   <label for="ddlParticulars">Particulars:</label>
                                               <select id="ddlParticulars" name="ddlParticulars" class="form-control show-tick">
                                                   <option value="0-0">Select</option>
                                                   @foreach (var item in Model.ParticularsList)
                                                   {

                                                       if (item.LD_IsFund == true && Model.LD_VoucherTypeId != 1)
                                                       {
                                                           <option value="@item.Value" class="Fund">@item.Text (FUND)</option>
                                                       }
                                                       else if (item.LD_IsFund == false)
                                                       {
                                                           <option value="@item.Value">@item.Text </option>
                                                       }


                                                   }
                                               </select>

                                               
                                           </div>
                                       </div>
                                   </div>

                                   <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                       <div class="demo-masked-input">
                                           <div class="input-group">
                                             
                                                   <label for="ddlFund">Fund Name:</label>
                                               <select id="ddlFund" name="ddlFund" class="form-control show-tick">
                                                   <option value="0-0">Select</option>
                                                   @foreach (var item in Model.ParticularsList.Where(a => a.LD_IsFund == true))
                                                   {
                                                       <option value="@item.Value">@item.Text </option>

                                                   }
                                               </select>

                                             
                                           </div>
                                       </div>
                                   </div>

                                   <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                       <div class="demo-masked-input">
                                           <div class="input-group">
                                               <div class="form-line">
                                                   <label for="nbmAmount">Amount:</label>
                                                   <input type="number" id="nbmAmount" name="nbmAmount" class="form-control numeric" value="" />
                                               </div>
                                           </div>
                                       </div>
                                   </div>

                                   <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                       <div class="demo-masked-input">
                                           <div class="input-group">
                                               <div class="form-line">
                                                   <label for="nbmAmount">Type:</label>
                                                   <select id="ddlDrCr" name="ddlDrCr" class="form-control">
                                                       @*<option value="0">Select</option>*@
                                                       @if (Model.LD_VoucherTypeId == 1)
                                                       {
                                                           <option value="D">Debit</option>
                                                       }
                                                       else if (Model.LD_VoucherTypeId == 2)
                                                       {
                                                           <option value="C">Credit</option>

                                                       }
                                                       else
                                                       {
                                                           <option value="D">Debit</option>
                                                           <option value="C">Credit</option>


                                                       }

                                                   </select>
                                               </div>
                                           </div>
                                       </div>
                                   </div>
                                
                            </div>

            <div class="row">
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
            <div class="demo-masked-input">
                <div class="input-group">
                    <div class="form-line">
                        <label for="txtRemarks">Remarks:</label>
                        <input id="txtRemarks" name="txtRemarks" class="form-control" value="@Model.LD_Remarks" />
                    </div>
                </div>
            </div>
        </div>

       
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
            <div style="height:20px"></div>
            <div class="demo-masked-input">
                <div class="input-group">
                    <input type="button" class="btn btn-success valid" style="padding: 10px;" id="btnAddItems" value="Add Item" onclick="addRecordCashVoucherEntryTable();" />
                </div>
            </div>
        </div>
      </div>                       <input type="hidden" id="RowCount" name="RowCount" value="0" />
                            <table id="tblList" class="table table-bordered table-striped">

                                <thead>
                                    <tr>

                                        <th style="text-align: center;" hidden><strong>Particulars</strong></th>
                                        <th style="text-align: center;"><strong>Particulars</strong></th>
                                        <th style="text-align: center;" hidden><strong>Fund</strong></th>
                                        <th style="text-align: center;"><strong>Fund</strong></th>
                                        <th style="text-align: center;" hidden><strong>Amount</strong></th>
                                        <th style="text-align: center;" hidden><strong>Mode</strong></th>
                                        <th style="text-align: center;"><strong>Debit</strong></th>
                                        <th style="text-align: center;"><strong>Credit</strong></th>
                                        <th style="text-align: center;" hidden><strong>Remarks</strong></th>
                                        <th style="text-align: center;"><strong>Remarks</strong></th>
                                        <th style="text-align: center;">Delete</th>
                                    </tr>
                                </thead>
                                <tbody>

                                </tbody>
                            </table>
                            <button type="submit" id="btnSave" class="btn btn-danger m-t-15 waves-effect" >Save</button>
                            @Html.ActionLink("View List", "VoucherEntryList", "Masters", null, new { @class = "btn btn-danger m-t-15 waves-effect" })
                      }
                    </div>
                </div>
            </div>
        </div>
        <!-- Vertical Layout | With Floating Label -->
    </div>
</section>
    