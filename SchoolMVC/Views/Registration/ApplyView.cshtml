@model SchoolMVC.Models.StudentApplication_AP
@{
    Layout = null; 
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Application Form</title> 
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        .application-preview {
            max-width: 900px;
            margin: auto;
            background-color: #ffffff;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .section-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-top: 20px;
            border-bottom: 2px solid #dee2e6;
            padding-bottom: 5px;
        }

        .field-label {
            font-weight: 600;
            color: #555;
        }
    </style>
</head>
<body>
    <div class="application-preview mt-5">
        <h2 class="text-center mb-4">Application Form</h2>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        <div class="section-title">Student Information</div>
        <div class="row mb-3">
            <div class="col-md-6"><span class="field-label">Candidate ID:</span> @Model.SA_ST_CANDIDATEID</div>
            <div class="col-md-6"><span class="field-label">Reg Date:</span> @Model.ST_REGDATE.HasValue ? @Model.ST_REGDATE.Value.ToString("dd-MMM-yyyy") : ""</div>
            <td>@Model.ST_REGDATE.HasValue ? @Model.ST_REGDATE.Value.ToString("dd-MMM-yyyy") : "")</td>
            <div class="col-md-6"><span class="field-label">Name:</span> @Model.ST_NAME</div>
            <div class="col-md-6"><span class="field-label">Guardian Name:</span> @Model.ST_PG_DETAILS</div>
            <div class="col-md-6"><span class="field-label">DOB:</span> @Model.ST_DOB.HasValue ? @Model.ST_DOB.Value.ToString("dd-MMM-yyyy") : ""</div>
            <div class="col-md-6"><span class="field-label">Applied School:</span> @Model.SCM_SCHOOLNAME</div>
            <div class="col-md-6"><span class="field-label">Class:</span> @Model.SA_ST_CLASS</div>
            <div class="col-md-6"><span class="field-label">Session:</span> @Model.SA_ST_SESSION</div>
        </div>

        <div class="section-title">Basic Details</div>
        <div class="row mb-3">
            <div class="col-md-6"><span class="field-label">Nationality:</span> @Model.AP_Nationality</div>
            <div class="col-md-6"><span class="field-label">Religion:</span> @Model.AP_Religion</div>
            <div class="col-md-6"><span class="field-label">Caste:</span> @Model.AP_Caste</div>
            <div class="col-md-6"><span class="field-label">Blood Group:</span> @Model.AP_BloodGroup</div>
            <div class="col-md-6"><span class="field-label">Gender:</span> @Model.AP_Gender</div>
            <div class="col-md-6"><span class="field-label">Aadhaar No:</span> @Model.AP_AadhaarNo</div>
        </div>

        <div class="section-title">Communication Details</div>
        <div class="row mb-3">
            <div class="col-md-6"><span class="field-label">Mobile:</span> @Model.ST_MOBILENO</div>
            <div class="col-md-6"><span class="field-label">Email-Id:</span> @Model.ST_EMAIL</div>
        </div>

        <div class="section-title">Premises Details</div>
        <div class="row mb-3">
            <div class="col-md-6"><span class="field-label">Permanent Address:</span> @Model.AP_PerAddress</div>
            <div class="col-md-6"><span class="field-label">Present Address:</span> @Model.AP_PreAddress</div>
            <div class="col-md-6"><span class="field-label">State:</span> @Model.AP_State</div>
            <div class="col-md-6"><span class="field-label">District:</span> @Model.district</div>
            <div class="col-md-6"><span class="field-label">PS:</span> @Model.AP_PoliceStation</div>
            <div class="col-md-6"><span class="field-label">PO:</span> @Model.AP_PO</div>
            <div class="col-md-6"><span class="field-label">Pin:</span> @Model.AP_Pin</div>
        </div>

        <div class="section-title">Others Details</div>
        <div class="row mb-3">
            <div class="col-md-6"><span class="field-label">Last School Name:</span> @Model.AP_LastSchoolName</div>
            <div class="col-md-6"><span class="field-label">TC No:</span> @Model.AP_TCNO</div>
            <div class="col-md-6"><span class="field-label">TC Date:</span> @Model.AP_TCDate</div>
            <div class="col-md-6"><span class="field-label">TC Type:</span> @Model.AP_TCTYPE</div>
            <div class="col-md-6"><span class="field-label">Admission Date:</span> @Model.AP_AdmissionDate</div>
        </div>
        <div class="section-title">Uploaded Documents</div>
        <div class="row mb-3">
        <div class="col-md-4">
                <span class="field-label">Birth Certificate:</span><br />
                <a href="@Url.Content(Model.AP_BirthCertificates)" class="btn btn-sm btn-outline-primary" target="_blank">View</a>
            </div>
        <div class="col-md-4">
                <span class="field-label">ID Proof:</span><br />
                <a href="@Url.Content(Model.AP_IdProofs)" class="btn btn-sm btn-outline-primary" target="_blank">View</a>
            </div>
        <div class="col-md-4">
                <span class="field-label">Marksheet:</span><br />
                <a href="@Url.Content(Model.AP_Marksheets)" class="btn btn-sm btn-outline-primary" target="_blank">View</a>
            </div>
        </div>
        <div class="text-center mt-4">
            <a href="@Url.Action("Dashboard", "Registration")" class="btn btn-secondary">Back to Home</a>
        </div>
    </div>
</body>
</html>
