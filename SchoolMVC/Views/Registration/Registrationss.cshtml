        <script>
            document.addEventListener("DOMContentLoaded", function () {
                setTimeout(function () {
                    window.location.href = '@Url.Action("Login", "Registration")';
                }, 2000);
            });
        </script>
    }*@

    @if (ViewBag.SuccessMessage != null)
    {
        <script>
            setTimeout(function () {
                window.location.href = '@Url.Action("ValidateOtp", "Registration")';
            }, 1500);
        </script>
    }


</body>
</html>