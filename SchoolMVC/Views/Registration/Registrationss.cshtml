@model SchoolMVC.Models.StudentRegistration_ST

@{
    ViewBag.Title = "User Registration";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>User Registration</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background: linear-gradient(to bottom, #a1c4fd, #c2e9fb);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .register-box {
            background: white;
            padding: 20px;
            border-radius: 10px;
            width: 400px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .btn-custom {
            background: #e91e63;
            color: white;
            width: 100%;
        }

        .input-group-text {
            background: #f1f1f1;
        }

        .logos {
            width: 100px;
            margin-bottom: 10px;
        }

        .small-label {
            display: block;
            text-align: left;
            margin-bottom: 2px;
        }
    </style>
</head>
<body>
    <div class="register-box text-center">
        <img src="~/Content/images/TIGImg/logotigps.png" alt="Logo" class="logos">
        <h3 class="text-center">Register new Student</h3>

        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success alert-dismissible fade show mt-2" role="alert">
                @ViewBag.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>

            <!-- Spinner overlay -->
            <div id="redirectOverlay" style="position: fixed; inset: 0; background-color: rgba(255, 255, 255, 0.8); z-index: 9999; text-align: center;">
                <div class="spinner-border text-primary" style="width: 3rem; height: 3rem; margin-top: 20%;" role="status">
                    <span class="visually-hidden">Redirecting...</span>
                </div>
                <p class="mt-3">Redirecting to OTP Validation page, please wait...</p>
            </div>
        }

        @using (Html.BeginForm("Registrationss", "Registration", FormMethod.Post, new { @id = "registrationForm" }))
        {
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    @Html.TextBoxFor(m => m.ST_NAME, new { @class = "form-control", placeholder = "Student Name" })
                </div>
                <div class="text-start">
                    @Html.ValidationMessageFor(m => m.ST_NAME, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3 text-start">
                <small class="text-muted small-label">DOB: DD/MM/YYYY</small>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                    @Html.TextBoxFor(m => m.ST_DOB, new { @class = "form-control", type = "date" })
                </div>
                <div class="text-start">
                    @Html.ValidationMessageFor(m => m.ST_DOB, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user-friends"></i></span>
                    @Html.TextBoxFor(m => m.ST_PG_DETAILS, new { @class = "form-control", placeholder = "Parent/Guardian Details" })
                </div>
                <div class="text-start">
                    @Html.ValidationMessageFor(m => m.ST_PG_DETAILS, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                    @Html.TextBoxFor(m => m.ST_MOBILENO, new { @class = "form-control", placeholder = "Mobile No", maxlength = "10" })
                </div>
                <div class="text-start">
                    @Html.ValidationMessageFor(m => m.ST_MOBILENO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    @Html.TextBoxFor(m => m.ST_EMAIL, new { @class = "form-control", placeholder = "Email Address" })
                </div>
                <div class="text-start">
                    @Html.ValidationMessageFor(m => m.ST_EMAIL, "", new { @class = "text-danger" })
                </div>
            </div>

            <button type="submit" class="btn btn-custom">SIGN UP</button>
        }

        <p class="text-center mt-3"><a href="/Registration/Login">You already have an account?</a></p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

