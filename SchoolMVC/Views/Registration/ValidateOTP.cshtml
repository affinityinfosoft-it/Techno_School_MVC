@{
    ViewBag.Title = "OTP Verification";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>OTP Verification</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(to bottom, #a1c4fd, #c2e9fb);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .otp-box {
            background: white;
            padding: 30px;
            border-radius: 12px;
            width: 380px;
            box-shadow: 0 6px 15px rgba(0,0,0,0.2);
            text-align: center;
        }

        .otp-input {
            letter-spacing: 10px;
            text-align: center;
            font-size: 22px;
            font-weight: bold;
        }

        .btn-verify {
            background-color: #e91e63;
            color: white;
            width: 100%;
        }
    </style>
</head>

<body>
    <div class="otp-box">
        <img src="~/Content/images/TIGImg/logotigps.png" alt="Logo" class="logos">

        <h4 class="mb-3">OTP Verification</h4>
        <p class="text-muted mb-4">
            Enter the 6-digit OTP sent to your registered mobile number
        </p>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                @ViewBag.Error
            </div>
        }

        @using (Html.BeginForm("ValidateOtp", "Registration", FormMethod.Post))
        {
            <div class="mb-3">
                <input type="text"
                       name="enteredOtp"
                       class="form-control otp-input"
                       maxlength="6"
                       placeholder="______"
                       required />
            </div>

            <button type="submit" class="btn btn-verify">
                Verify OTP
            </button>
        }

        @using (Html.BeginForm("ReSendOtp", "Registration", FormMethod.Post))
        {
            <button type="submit" class="btn btn-link mt-2">
                Resend OTP
            </button>
        }
    </div>
</body>
</html>
