@{
    ViewBag.Title = "PromotionReport";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
    var reqField = @MvcHtmlString.Create("<span class=\"required\" style=\"color: red\" id=\"req\">*&nbsp;</span>");

}

<section class="content">
    <div class="container-fluid">
        @*<div class="block-header">
                <h2>Financial Year Master</h2>
            </div>*@
        <!-- Vertical Layout | With Floating Label -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            Student Promotion Report
                            <small></small>
                        </h2>
                    </div>
                    <div class="body">
                        <form>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Class</label>&nbsp;@reqField
                                                @Html.DropDownList("CLASSID", null, "Select Class", new { @class = "form-control show-tick", required = "required" })
                                                @Html.Hidden("SchoolId")
                                                @Html.Hidden("SessionId")
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Section</label>&nbsp;@reqField
                                                <select id="ddlCWF_SectionId" class="form-control show-tick" name="ddlCWF_SectionId">
                                                    <option value="0">Select</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Promotion Status</label>&nbsp;@reqField
                                                <select id="ddlPromotionStatus" class="form-control show-tick" name="ddlPromotionStatus">
                                                    <option value="1" selected>Promoted</option>
                                                    <option value="2">Unpromoted</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            @{ if ((bool)Session["CanView"] == true)
                             {
                                <button type="button" id="btnView" class="btn btn-danger m-t-15 waves-effect" onclick="LoadReport();">View</button>

                             }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Vertical Layout | With Floating Label -->
    </div>
</section>

<script>
    $(document).ready(function () {
        BindPromotionStatus();
    });
    $(document).ready(function () {

        // Bind promotion status dropdown on page load
        BindPromotionStatus();

        // Load section dropdown based on selected class
        $("#CLASSID").change(function () {
            AjaxPostForDropDownSection($('#CLASSID option:selected').val());
        });

        // Handle View button
        $("#btnView").click(function () {
            ReportView();
        });
    });

    function BindPromotionStatus() {
        var ddl = $("#ddlPromotionStatus");
        ddl.empty();
        ddl.append(new Option("Promoted", "1", true, true)); // default selected
        ddl.append(new Option("Unpromoted", "2"));
        ddl.selectpicker('refresh'); // only if bootstrap-select is used
    }

    // === Get Section By Class ===
    function AjaxPostForDropDownSection(Id) {
        var _data = JSON.stringify({
            Id: parseInt(Id),
        });
        $.ajax({
            type: "POST",
            url: rootDir + "JQuery/GetSectionByClass",
            data: _data,
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            async: false,
            success: function (data, status) {
                if (status === "success") {
                    BindDropDownListForSection($('#ddlCWF_SectionId'), data);
                    $("#ddlCWF_SectionId").selectpicker('refresh');
                } else {
                    showMessage("Unable to process the request...", 0);
                }
            }
        });
    }

    function BindDropDownListForSection(ddl, dataCollection) {
        $(ddl).get(0).length = 0;
        $(ddl).get(0).options[0] = new Option("Select", "0", true, true);
        for (var i = 0; i < dataCollection.length; i++) {
            $(ddl).get(0).options[i + 1] =
                new Option(dataCollection[i].SECM_SECTIONNAME, dataCollection[i].SECM_SECTIONID);
        }
    }

    // === Report View ===
    function ReportView() {
        var ClassId = parseInt($("#CLASSID").val()) || 0;
        var SchoolId = parseInt($("#SchoolId").val());
        var SessionId = parseInt($("#SessionId").val());
        var SecId = parseInt($("#ddlCWF_SectionId").val()) || 0;
        var PromotionStatus = parseInt($("#ddlPromotionStatus").val()) || 0;

        // Optional: Validate Promotion Status
        if (PromotionStatus === 0) {
            alert("Please select Promotion Status");
            return;
        }

        // Build URL
        var url = rootDir + "Reports/Academic/StudentPromotion.aspx"
            + "?ClassId=" + ClassId
            + "&SchoolId=" + SchoolId
            + "&SessionId=" + SessionId
            + "&SecId=" + SecId
            + "&PromotionStatus=" + PromotionStatus;

        var WindowDimensions = "toolbars=no,menubar=no,location=no,titlebar=no,scrollbars=yes,resizable=yes,status=yes";
        var PopUp = window.open(url, "MyReportWindow", WindowDimensions);

        if (PopUp.outerWidth < screen.availWidth || PopUp.outerHeight < screen.availHeight) {
            PopUp.moveTo(25, 50);
            PopUp.resizeTo(screen.availWidth - 10, screen.availHeight - 10);
        }
    }

    // === Validation ===
    function ValidateForm() {
        if ($('#FromDate').val() === '' || $('#ToDate').val() === '') {
            alert('Please provide a valid date range to view fees collection report.');
            return false;
        }
        return true;
    }
</script>


