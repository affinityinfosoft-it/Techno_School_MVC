
@{
    ViewBag.Title = "StudentStrength";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
    var reqField = @MvcHtmlString.Create("<span class=\"required\" style=\"color: red\" id=\"req\">*&nbsp;</span>");

}

<section class="content">
    <div class="container-fluid">
        @*<div class="block-header">
                <h2>Financial Year Master</h2>
            </div>*@
        <!-- Vertical Layout | With Floating Label -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                           Student Strength Report
                            <small></small>
                        </h2>
                    </div>
                    <div class="body">
                        <form>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Class</label>&nbsp;@reqField
                                                @Html.DropDownList("CLASSID", null, "Select Class", new { @class = "form-control show-tick", required = "required" })
                                                @Html.Hidden("SchoolId")
                                                @Html.Hidden("SessionId")
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Section</label>
                                                <select id="ddlCWF_SectionId" class="form-control show-tick" name="ddlCWF_SectionId">
                                                    <option value="0">Select</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Caste</label>
                                                @Html.DropDownList("SD_CasteId",(SelectList)ViewBag.SD_CasteId,"All",new { @class = "form-control show-tick" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" style=" display:none;">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Student Name</label>
                                                @Html.TextBox("txtStudentName", null, new { @class = "form-control ", @placeholder = "Student Name" })
                                                @*@Html.EditorFor(model => model.BGM_BLDGRPNAME, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Blood Group" } })*@
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" style=" display:none;">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Student Id</label>
                                                @Html.TextBox("txtStudentId", null, new { @class = "form-control ", @placeholder = "Student Id" })
                                                @*@Html.EditorFor(model => model.BGM_BLDGRPNAME, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Blood Group" } })*@
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            @{ if ((bool)Session["CanView"] == true)
                             {
                                <button type="button" id="btnView" class="btn btn-danger m-t-15 waves-effect" onclick="LoadReport();">View</button>

                             }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Vertical Layout | With Floating Label -->
    </div>
</section>
<script>
    $(document).ready(function () {

        $("#CLASSID").change(function () {
            AjaxPostForDropDownSection($('#CLASSID option:selected').val());
        });
    });
    function AjaxPostForDropDownSection(Id) {
        var _data = JSON.stringify({
            Id: parseInt(Id),
        });
        $.ajax({
            type: "POST",
            url: rootDir + "JQuery/GetSectionByClass",
            data: _data,
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            async: false,
            success: function (data, status) {
                if (status == "success") {
                    BindDropDownListForSection($('#ddlCWF_SectionId'), data);
                    $("#ddlCWF_SectionId").selectpicker('refresh');

                } else {
                    showMessage("Unable to process the request...", 0);
                }
            }
        });
    }
    function BindDropDownListForSection(ddl, dataCollection) {
        $(ddl).get(0).length = 0;
        $(ddl).get(0).options[0] = new Option("Select", "0", "Selected");
        for (var i = 0; i < dataCollection.length; i++) {
            $(ddl).get(0).options[i + 1] = new Option(dataCollection[i].SECM_SECTIONNAME, dataCollection[i].SECM_SECTIONID);
        }
    }
    $("#btnView").click(function () {
        ReportView();
    });

    function ReportView() {
        var Fromdate = $("#FromDate").val();
        var Todate = $("#ToDate").val();
        //var ClassId = $("#CLASSID").val();
        var ClassId = parseInt($("#CLASSID").val());
        if (ClassId == "" || isNaN(ClassId) == true) {
            ClassId = 0;
        }
        var StName = $("#txtStudentName").val();
        var StId = $("#txtStudentId").val();
        var SchoolId = parseInt($("#SchoolId").val());
        var SessionId = parseInt($("#SessionId").val());
        var SecId = parseInt($("#ddlCWF_SectionId").val());
        var CasteId = parseInt($("#SD_CasteId").val()) || 0;

        var url = rootDir + "Reports/Academic/StudentStrengthReport.aspx?&ClassId=" + parseInt(ClassId) + "&SchoolId=" + parseInt(SchoolId) + "&SessionId=" + parseInt(SessionId) + "&SecId=" + parseInt(SecId) + "&SD_CasteId=" + CasteId  + "&StName=" + StName + "&StId=" + StId;
        var WindowDimensions = "toolbars=no,menubar=no,location=no,titlebar=no,scrollbars=yes,resizable=yes,status=yes"
        var PopUp = window.open(url, "MyReportWindow", WindowDimensions);
        if (PopUp.outerWidth < screen.availWidth || PopUp.outerHeight < screen.availHeight) {
            PopUp.moveTo(25, 50);
            PopUp.resizeTo(screen.availWidth - 10, screen.availHeight - 10);

        }
    }
    function ValidateForm()
    {
        if ($('#FromDate').val() == '' || $('#ToDate').val() == '')
        {
            alert('Please provide a valide date range to view fees collection report.')
            return false;
        }
        return true;
    }
</script>

