
@{
    ViewBag.Title = "TeacherWiseRoutine";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
    var reqField = @MvcHtmlString.Create("<span class=\"required\" style=\"color: red\" id=\"req\">*&nbsp;</span>");

}
<section class="content">
    <div class="container-fluid">
        <!-- Vertical Layout | With Floating Label -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            Teacher Wise Routine Report
                            <small></small>
                        </h2>
                    </div>
                    <div class="body">
                        <form>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Faculty</label>&nbsp;@reqField
                                                @Html.DropDownList("FacultyId", null, "Select Faculty", new { @class = "form-control show-tick", data_live_search = "true", data_size = "8", required = "required" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Class</label>&nbsp;@reqField
                                                @Html.DropDownList("CLASSID", null, "Select Class", new { @class = "form-control show-tick", required = "required" })
                                                @Html.Hidden("SchoolId")
                                                @Html.Hidden("SessionId")
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Section</label>
                                                <select id="ddlCWF_SectionId" class="form-control show-tick" name="ddlCWF_SectionId">
                                                    <option value="0">Select</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                @{ if ((bool)Session["CanView"] == true)
                                 {
                                    <button type="button" id="btnView" class="btn btn-danger m-t-15 waves-effect">
                                        View
                                    </button>

                                 }}
                            </div>
                           
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Vertical Layout | With Floating Label -->
    </div>
</section>
<script>
    $(document).ready(function () {

        $("#CLASSID").change(function () {
            AjaxPostForDropDownSection($('#CLASSID option:selected').val());
        });
    });
    function AjaxPostForDropDownSection(Id) {
        var _data = JSON.stringify({
            Id: parseInt(Id),
        });
        $.ajax({
            type: "POST",
            url: rootDir + "JQuery/GetSectionByClass",
            data: _data,
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            async: false,
            success: function (data, status) {
                if (status == "success") {
                    BindDropDownListForSection($('#ddlCWF_SectionId'), data);
                    $("#ddlCWF_SectionId").selectpicker('refresh');

                } else {
                    showMessage("Unable to process the request...", 0);
                }
            }
        });
    }
    function BindDropDownListForSection(ddl, dataCollection) {
        $(ddl).get(0).length = 0;
        $(ddl).get(0).options[0] = new Option("Select", "0", "Selected");
        for (var i = 0; i < dataCollection.length; i++) {
            $(ddl).get(0).options[i + 1] = new Option(dataCollection[i].SECM_SECTIONNAME, dataCollection[i].SECM_SECTIONID);
        }
    }
    $("#btnView").click(function () {

        var isValid = true;

        var facultyId = parseInt($("#FacultyId").val());
        var classId = parseInt($("#CLASSID").val());

        // Reset error styles
        $("#FacultyId, #CLASSID").removeClass("error");

        // Faculty validation
        if (isNaN(facultyId) || facultyId === 0) {
            $("#FacultyId").addClass("error");
            isValid = false;
        }

        // Class validation
        if (isNaN(classId) || classId === 0) {
            $("#CLASSID").addClass("error");
            isValid = false;
        }

        if (!isValid) {
            alert("Please select Faculty and Class before viewing the report.");
            return false;
        }

        // If validation passed
        ReportView();
    });
    function showMessage(message, type) {
        // type: 0 = error, 1 = success
        if (type === 0) {
            alert("❌ " + message);
        } else {
            alert("✅ " + message);
        }
    }
   function ReportView() {
        var Fromdate = $("#FromDate").val();
        var Todate = $("#ToDate").val();
        //var ClassId = $("#CLASSID").val();
        var ClassId = parseInt($("#CLASSID").val());
        if (ClassId == "" || isNaN(ClassId) == true) {
            ClassId = 0;
        }
        var Faculty = parseInt($("#FacultyId").val());
        if (Faculty == "" || isNaN(Faculty) == true) {
            Faculty = 0;
        }
        var StName = $("#txtStudentName").val();
        var StId = $("#txtStudentId").val();
        var SchoolId = parseInt($("#SchoolId").val());
        var SessionId = parseInt($("#SessionId").val());
        var SecId = parseInt($("#ddlCWF_SectionId").val());
        //if (SecId == 0 || isNaN(SecId) == true) {
        //    SecId = null;
        //}
        var url = rootDir + "Reports/Academic/TeacherRoutineReport.aspx?&ClassId=" + parseInt(ClassId) + "&SchoolId=" + parseInt(SchoolId) + "&SessionId=" + parseInt(SessionId) + "&SecId=" + parseInt(SecId) + "&FacId=" + parseInt(Faculty);
        var WindowDimensions = "toolbars=no,menubar=no,location=no,titlebar=no,scrollbars=yes,resizable=yes,status=yes"
        var PopUp = window.open(url, "MyReportWindow", WindowDimensions);
        if (PopUp.outerWidth < screen.availWidth || PopUp.outerHeight < screen.availHeight) {
            PopUp.moveTo(25, 50);
            PopUp.resizeTo(screen.availWidth - 10, screen.availHeight - 10);
        }
    }
</script>

