@{
    ViewBag.Title = "AdmittedStudentList";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
    var reqField = @MvcHtmlString.Create("<span class=\"required\" style=\"color: red\" id=\"req\">*&nbsp;</span>");
}
<section class="content">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="card">
                <div class="body">
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                            <div class="demo-masked-input" >
                                <div class="input-group">
                                    <div class="form-line">
                                        <label id="lbl" >Class</label> 
                                        @Html.DropDownList("SD_ClassId", null, "Select Class", new { @class = "form-control show-tick", required = "required" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                            <div class="demo-masked-input">
                                <div class="input-group">
                                    <div class="form-line">
                                        <label id="lbl">Student Id/Admission No</label> 
                                        <input type="text" id="AdmissionNo" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                            <div class="demo-masked-input">
                                <div class="input-group">
                                    <div class="form-line">
                                        <label id="lbl">Student Name</label>
                                        <input type="text" id="StudentName" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="demo-masked-input">
                                <div class="input-group">
                                    <div class="form-line">
                                        <label>From Date</label>
                                        <div class="datepicker-wrapper">
                                            <input id="FromDate" name="FromDate" class="form-control datepicker" readonly />
                                            <span class="calendar-icon material">
                                                <i class="material-icons">event</i>
                                            </span>
                                        </div> 
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="demo-masked-input">
                                <div class="input-group">
                                    <div class="form-line">
                                        <label>To Date</label>
                                        <div class="datepicker-wrapper">
                                            <input id="ToDate" name="ToDate" class="form-control datepicker" readonly />
                                            <span class="calendar-icon material">
                                                <i class="material-icons">event</i>
                                            </span>
                                        </div> 
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="button" id="btnSave" style="padding: 12px;" class="btn btn-danger m-b-15 waves-effect" onclick="StudentList();">Search</button>
                        <div class="col-lg-12 text-left">

                          
                            @{ if ((bool)Session["CanAdd"] == true)
                             {
                                <a href="~/StudentManagement/Admission" role="button" class="btn bg-cyan waves-effect m-b-15">  Add New Admission</a>
                             }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="table-responsive">
                                <div id="update-panel"></div>

                            </div>
                        </div>
                    </div>

                    @*<h2>
                            Student List
                        </h2>*@

                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/Scripts/Appscript/StudentAdmission.js"></script>

