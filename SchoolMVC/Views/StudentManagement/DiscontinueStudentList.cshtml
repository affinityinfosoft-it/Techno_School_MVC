@{
    ViewBag.Title = "Discontinue Student List";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
    var reqField = @MvcHtmlString.Create("<span class=\"required\" style=\"color: red\" id=\"req\">*&nbsp;</span>");
}
<section class="content">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="card">
                <div class="header">
                    <h2>
                        @ViewBag.Title
                        <small></small>
                    </h2>
                </div>
                <div class="body">
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                            <div class="demo-masked-input">
                                <div class="input-group">
                                    <div class="form-line">
                                        <label id="lbl">Class</label>&nbsp;@reqField
                                        @Html.DropDownList("ClassId", null, "Select Class", new { @class = "form-control show-tick" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                            <div class="demo-masked-input">
                                <div class="input-group">
                                    <div class="form-line">
                                        <label id="lbl">Student Id</label>&nbsp;@reqField
                                        <input type="text" id="txtStudentId" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                            <div class="demo-masked-input">
                                <div class="input-group">
                                    <div class="form-line">
                                        <label id="lbl">Student Name</label>
                                        <input type="text" id="txtStudentName" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-1 col-md-1 col-sm-6 col-xs-12">
                            <div style="height:18px"></div>
                            <button type="button" id="btnSave" style="padding: 12px;" class="btn btn-danger m-b-15 waves-effect" onclick="BindStudentList();">Search</button> &nbsp;
                        </div>
                        <div class="col-lg-1 col-md-1 col-sm-6 col-xs-12">
                            <div style="height:18px"></div>

                            <a href="~/StudentManagement/DiscontinueStudent" role="button" style="padding: 12px;" class="btn bg-cyan waves-effect m-b-15">  Add New Discontinue</a>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="table-responsive">
                                <div id="update-panel"></div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    $(document).ready(function () {
        DiscontinueList();
    });
    function BindStudentList()
    {
        DiscontinueList();
    }
    function DiscontinueList() {
        $('#update-panel').html('loading data.....');
        $.ajax({
            url: '/JQuery/GetDisStudentList',
            data: { SD_ClassId: parseInt($('#ClassId').val()), SD_StudentId: $.trim($('#txtStudentId').val()), SD_StudentName: $.trim($('#txtStudentName').val()), TransType: 'SELECTALLDIS' },
            dataType: 'json',
            type: 'GET',
            success: function (res) {
                if (res.Data.length > 0) {
                    $data = $('<table id="tblList"></table>').addClass('table table-bordered table-striped');
                    $header = "<thead><tr><th>Student Id</th><th>Student Name</th><th>Class</th><th>Contact No 1</th><th>Contact No 2</th><th>Action</th></thead>";
                    $data.append($header);
                    $.each(res.Data, function (i, row) {
                        var $row = $('<tr/>');
                        $row.append($('<td>').append(row.SD_StudentId));
                        $row.append($('<td>').append(row.SD_StudentName));
                        $row.append($('<td>').append(row.SD_CM_CLASSNAME));
                        $row.append($('<td>').append(row.SD_ContactNo1));
                        $row.append($('<td>').append(row.SD_ContactNo2));
                        $row.append($('<td>').append("<a href='#' id='btnUpdate' onclick='btnUpdate(this);' class='btn btn-warning'>Continue</a>"));
                        $data.append($row);
                    });
                    $("#update-panel").html($data);
                    //$("#tblList").DataTable();
                    //$('#tblList').DataTable({
                    //});
                }
                else {
                    $noData = "<div>No data Found</td>"
                    $("#update-panel").html($noData);
                }
            },
            failure: function () {
                ErrorToast('something wrong happen');
            }
        });
    }

    function btnUpdate(elem) {
        var StudentId = $(elem).closest('tr').find('td:eq(0)').text();
        $.ajax({
            url: '/JQuery/DiscontinueStudentListUpdate',
            data: {SD_StudentId: StudentId },
            dataType: 'json',
            type: 'POST',
            success: function (res) {

                if (res == 100) {
                    SuccessToast("Update Successfull");
                    window.location.reload();
                }
            },
            failure: function () {
                ErrorToast('something wrong happen');
            }

        });
       }
</script>