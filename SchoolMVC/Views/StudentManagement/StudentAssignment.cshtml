@model SchoolMVC.Models.AssignmentMaster_ASM
@{
    ViewBag.Title = "StudentAssignment";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
    var reqField = @MvcHtmlString.Create("<span class=\"required\" style=\"color: red\" id=\"req\">*&nbsp;</span>");
}
@section scripts{
    @Scripts.Render("~/Scripts/Appscript/Assignment.js")
}
<style>
    /* Remove default checkbox */
    [type="checkbox"]:not(:checked),
    [type="checkbox"]:checked {
        position: unset;
        left: 0px;
        opacity: unset;
    }
</style>
<section class="content">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            Assignment Master
                            <small></small>
                        </h2>
                    </div>
                    <div class="body">
                        <form>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <label>Class</label>&nbsp;@reqField
                                            @Html.Hidden("ASM_Class_ID")
                                            @Html.Hidden("ASM_Section_ID")
                                            <select id="ClassId" class="form-control show-tick" name="ClassId">
                                                <option value="0">Select</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <label>Section</label>&nbsp;@reqField
                                            <select id="ddlSectionId" class="form-control show-tick" name="ddlSectionId">
                                                <option value="0">Select</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <label>Suject Group :</label>
                                            @Html.DropDownList("ASM_SubGr_ID", null, "Select Class", new { @class = "form-control show-tick", required = "required" })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <label>Subject :</label>&nbsp;@reqField
                                            @Html.DropDownList("ASM_Sub_ID", null, "Select Class", new { @class = "form-control show-tick", required = "required" })
                                        </div>
                                    </div>
                                </div>



                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Assignment Title :</label> &nbsp;@reqField
                                                @Html.EditorFor(model => model.ASM_Title, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Description :</label> &nbsp;@reqField
                                                @Html.EditorFor(model => model.ASM_Desc, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                @*@Html.Hidden("ASM_ID")*@
                                                <label>Start Date :</label>&nbsp;@reqField
                                                @Html.EditorFor(model => model.ASM_StartDate, new { htmlAttributes = new { @class = "form-control", required = "required", @type = "Date", placeholder = "Start Date" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                @*@Html.Hidden("ASM_ID")*@
                                                <label>End Date :</label>&nbsp;@reqField
                                                @Html.EditorFor(model => model.ASM_ExpDate, new { htmlAttributes = new { @class = "form-control", required = "required", @type = "Date", placeholder = "End Date" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <label>Upload File</label>&nbsp;@reqField
                                            <input type="file" name="ASM_UploadDoc" id="ASM_UploadDoc" class="form-control">
                                            @if (!string.IsNullOrEmpty(Model.ASM_UploadDoc))
                                            {
                                                <div class="item">
                                                    <a href=@Model.ASM_UploadDoc.Replace("~", "../..") target="_blank">View</a>
                                                    <input type="hidden" id="hdnImage" name="hdnImage" value="@Model.ASM_UploadDoc">
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <input type="button" id="btnSearch" class="btn btn-danger" value="Search" />
                                </div>
                            </div>
                            @*<div class="ln_solid"></div>*@
                            <table id="tblStudent" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th style="display:none;">Student Id</th>
                                        <th>Student Name</th>
                                        <th>Class</th>
                                        <th>Section</th>
                                        <th>Roll</th>
                                        <th>Absent</th>
                                    </tr>
                                </thead>

                            </table>

                            <div class="col-sm-3">
                                <input type="button" id="btnSave" class="btn btn-primary" value="Save" />
                            </div>
                            <div style="height: 24px"></div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                </div>
                            </div>
                            <div>
                                <br />
                                <br />
                                <br />
                            </div>
                            <div style="height: 24px"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Vertical Layout | With Floating Label -->
    </div>
</section>

