@model SchoolMVC.Models.StudentAttendenceMaster_SAM
@{
    ViewBag.Title = "StudentAttendance";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
    var reqField = @MvcHtmlString.Create("<span class=\"required\" style=\"color: red\" id=\"req\">*&nbsp;</span>");
}
@section scripts{
    @Scripts.Render("~/Scripts/Appscript/StudentAttendance.js")
}
<style>
    /* Remove default checkbox */
    [type="checkbox"]:not(:checked),
    [type="checkbox"]:checked {
        position: unset;
        left: 0px;
        opacity: unset;
    }
</style>
<section class="content">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            Daily Attendance
                            <small></small>
                        </h2>
                    </div>
                    <div class="body">
                        <form>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <label>Class</label>&nbsp;@reqField
                                            @Html.Hidden("SAM_ClassId")
                                            @Html.Hidden("SAM_SectionId")
                                            <select id="ClassId" class="form-control show-tick" name="ClassId">
                                                <option value="0">Select</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <label>Section</label>&nbsp;@reqField
                                            <select id="ddlSectionId" class="form-control show-tick" name="ddlSectionId">
                                                <option value="0">Select</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Date Of Attendance</label>&nbsp;@reqField
                                                <div class="datepicker-wrapper">
                                                    @Html.TextBoxFor(m => m.SAM_Date, new { @class = "form-control datepicker", @readonly = "readonly", Value = Model.SAM_DateS })
                                                    <span class="calendar-icon material">
                                                        <i class="material-icons">event</i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <input type="button" id="btnSearch" class="btn btn-danger" value="Search" />
                                </div>
                            </div>
                            @*<div class="ln_solid"></div>*@
                            <table id="tblStudent" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th style="display:none;">Student Id</th>
                                        <th style="width:50px;">SL</th>
                                        <th>Student Name</th>
                                        <th>Class</th>
                                        <th>Section</th>
                                        <th>Roll</th>
                                        <th>Absent</th>
                                        <th>Half Day</th>
                                        <th>Late Coming</th>
                                    </tr>
                                </thead>
                            </table>

                            <div class="col-sm-3">
                                <input type="button" id="btnSave" class="btn btn-primary" value="Save" />
                            </div>
                            <div style="height: 24px"></div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                </div>
                            </div>
                            <div>
                                <br />
                                <br />
                                <br />
                            </div>
                            <div style="height: 24px"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Vertical Layout | With Floating Label -->
    </div>
</section>

