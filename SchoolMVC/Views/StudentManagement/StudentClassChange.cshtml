
@{
    ViewBag.Title = "StudentClassChange";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
    var reqField = @MvcHtmlString.Create("<span class=\"required\" style=\"color: red\" id=\"req\">*&nbsp;</span>");
}
<section class="content">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="card">
                <div class="header">
                    <h2>
                        @ViewBag.Title
                        <small></small>
                    </h2>

                </div>
                <div class="body">
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                            <div class="demo-masked-input">
                                <div class="input-group">
                                    <div class="form-line">
                                        <label id="lbl">Class</label>&nbsp;@reqField
                                        @Html.DropDownList("ClassId", null, "Select Class", new { @class = "form-control show-tick" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                            <div style="height:18px"></div>
                            <button type="button" id="btnSearch" style="padding: 12px;" class="btn btn-danger m-b-15 waves-effect">Search</button> &nbsp;
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="table-responsive">
                                <div id="update-panel"></div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Exportable Table -->
</section>
<script src="~/Scripts/Appscript/StudentClassChange.js"></script>