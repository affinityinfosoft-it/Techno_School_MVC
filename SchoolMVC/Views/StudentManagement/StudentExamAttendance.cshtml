@model SchoolMVC.Models.StudentExamAttandanceMaster_SEA
@{
    ViewBag.Title = "StudentExamAttendance";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
    var reqField = @MvcHtmlString.Create("<span class=\"required\" style=\"color: red\" id=\"req\">*&nbsp;</span>");
}
@section scripts{
    @Scripts.Render("~/Scripts/Appscript/ExamAttendance.js")

}
<style>
    /* Remove default checkbox */
    [type="checkbox"]:not(:checked),
    [type="checkbox"]:checked {
        position: unset;
        left: 0px;
        opacity: unset;
    }
</style>

<section class="content">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            Exam Attendance
                            <small></small>
                        </h2>
                    </div>
                    <div class="body">
                        <form>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <label>Class</label>&nbsp;@reqField
                                            @Html.Hidden("SEA_ClassId")
                                            @Html.Hidden("SEA_SecId")
                                            @Html.Hidden("SEA_SubjectId")
                                            <input type="hidden" id="hdnSEA_TermId" name="hdnSEA_TermId" value="0" />
                                            <select id="ddlSEA_ClassId" class="form-control show-tick" name="ddlSWS_SecId">
                                                <option value="0">Select</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <label>Section</label>&nbsp;@reqField
                                            <select id="ddlSEA_SectionId" class="form-control show-tick" name="ddlSWS_SecId">
                                                <option value="0">Select</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <label>Subject</label>&nbsp;@reqField
                                            <select id="ddlSEA_SubjectId" class="form-control show-tick" name="ddlSEA_SubjectId">
                                                <option value="0">Select</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <label>Term</label>&nbsp;@reqField
                                            @Html.DropDownList("SEA_TermId", null, "Select Term", new { @class = "form-control show-tick", required = "required" })
                                        </div>
                                    </div>
                                </div>
                            </div>   
                                <div class="row">

                                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                        <div class="demo-masked-input">
                                            <div class="input-group">
                                                <div class="form-line">
                                                    <label>Date Of Exam</label>&nbsp;@reqField
                                                    <div class="datepicker-wrapper">
                                                        @Html.TextBoxFor(m => m.SEA_Attn_Date, new { @class = "form-control datepicker", @readonly = "readonly", Value = Model.SEA_Attn_DateS })
                                                        <span class="calendar-icon material">
                                                            <i class="material-icons">event</i>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">

                                        <input type="button" id="btnSearch" class="btn btn-danger" value="Search" />
                                    </div>
                                </div>                                                    
                            @*<div class="ln_solid"></div>*@
                            <table id="tblStudent" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th style="display:none;">Student Id</th>
                                        <th style="width:50px;">SL</th>
                                        <th>Student Name</th>
                                        <th>Class</th>
                                        <th>Section</th>
                                        <th>Roll</th>
                                        <th>Absent</th>                                      
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.FilterId != "")
                                    {
                                        if (ViewBag.DataList != null)
                                        {
                                            foreach (var data in ViewBag.DataList)
                                            {
                                                <tr>
                                                    <td>@data.SWS_StudentSID</td>
                                                    <td style="display:none">@data.SWS_SubGroupId</td>
                                                    <td>@data.SWS_SubjectGroupName</td>
                                                    <td style="display:none">@data.SWS_SubjectId</td>
                                                    <td>@data.SWS_SubjectName</td>
                                                    <td><input type="image" name="imgede" src="~/Content/images/pencil.png" onclick="EditStudentWiseSub(this)" style="padding: 12px;"></td>
                                                    <td><input type="image" name="imgede" src="~/Content/images/close_icon.png" onclick="deleteRow(this)"></td>
                                                </tr>
                                            }
                                        }
                                    }
                                </tbody>
                            </table> 
                              
                            <div class="col-sm-3">
                                <input type="button" id="btnSave" class="btn btn-primary" value="Save" />
                            </div>                      
                            <div style="height: 24px"></div>
                            <div class="col-lg-12">
                                <div class="form-group">                                    
                                </div>
                            </div>
                            <div>
                                <br/>
                                <br/>
                                <br/>
                            </div>
                            <div style="height: 24px"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Vertical Layout | With Floating Label -->
    </div>
</section>
