@model SchoolMVC.Models.StudetDetails_SD
@{
    ViewBag.Title = "Admission";
    Layout = "~/Views/Shared/_SchoolWebLayout.cshtml";
}

<!-- Bootstrap Select Css -->
<link href="~/Content/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
<link href="~/Content/plugins/datepicker/datepicker3.css" rel="stylesheet" />
<section class="content">
    <div class="container-fluid">
        @*<div class="block-header">
                <h2>Financial Year Master</h2>
            </div>*@
        <!-- Vertical Layout | With Floating Label -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card" style="margin-left:-301px; ">
                    <div class="header">
                        <h2>
                            Admission Form
                            <small></small>
                        </h2>

                    </div>
                    <div class="body">
                        <form>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label id="lbl">Form No *</label>
                                                @Html.EditorFor(model => model.SD_FormNo, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Form No." } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label id="lbl">Student Name *</label>
                                                @Html.Hidden("SD_Id")
                                                @Html.EditorFor(model => model.SD_StudentName, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Student Name" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label id="lbl">Father Name *</label>
                                                @Html.EditorFor(model => model.SD_FatherName, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Father Name" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label id="lbl">Mother Name</label>
                                                @Html.EditorFor(model => model.SD_MotherName, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Mother Name" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label id="lbl">Applied class *</label>
                                                @Html.DropDownList("SD_ClassId", null, "Select Class", new { @class = "form-control show-tick", required = "required" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Date Of birth</label>
                                                @Html.EditorFor(model => model.SD_DOB, new { htmlAttributes = new { @class = "form-control date", required = "required", placeholder = "Date of Birth" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Caste</label>
                                                @Html.DropDownList("SD_CasteId", null, "Select Caste", new { @class = "form-control show-tick", required = "required" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Mother Tongue</label>
                                                @Html.DropDownList("SD_MotherTongueId", null, "Select Mother Tongue", new { @class = "form-control show-tick", required = "required" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Address *</label>
                                                @Html.EditorFor(model => model.SD_Address, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Address" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>State</label>
                                                @Html.DropDownList("SD_StateId", null, "Select State", new { @class = "form-control show-tick", required = "required" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>District</label>
                                                @Html.DropDownList("SD_DistrictId", null, "Select District", new { @class = "form-control show-tick", required = "required" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Pin Code</label>
                                                @Html.EditorFor(model => model.SD_PinCode, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Pin Code", @maxlength = "6" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Mobile No *</label>
                                                @Html.EditorFor(model => model.SD_ContactNo1, new { htmlAttributes = new { @class = "form-control mobile-phone-number", required = "required", placeholder = "Mobile No" } })

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Alternative Mobile No</label>
                                                @Html.EditorFor(model => model.SD_ContactNo2, new { htmlAttributes = new { @class = "form-control mobile-phone-number", required = "required", placeholder = "Alternative Mobile No" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Email</label>
                                                @Html.EditorFor(model => model.SD_EmailId, new { htmlAttributes = new { @class = "form-control email", required = "required", placeholder = "Email" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>Category *</label>
                                                @Html.DropDownList("SD_StudentCategoryId", null, "Select Student Category", new { @class = "form-control show-tick", required = "required" })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>last School Name</label>
                                                @Html.EditorFor(model => model.SD_LastSchoolName, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Last School Name" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>TC No</label>
                                                @Html.EditorFor(model => model.SD_TCNo, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "TC No" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            <div class="form-line">
                                                <label>TC date</label>
                                                @Html.EditorFor(model => model.SD_TCDate, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "TC Date" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="demo-masked-input">
                                        <div class="input-group">
                                            @*<div class="form-line">*@
                                            <label>Student Photo</label>
                                            @*@Html.EditorFor(model => model.SD_Photo, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Student Photo" } })*@
                                            @*Shoumya*@
                                            <input type="file" name="SD_Photo" id="SD_Photo" class="form-control">
                                            @if (!string.IsNullOrEmpty(Model.SD_Photo))
                                            {
                                                <div class="item">
                                                    @*<img class="uploaded-img ImgCaption" style="width:120px;height:100px;" src="@Model.SD_Photo">*@
                                                    <a href=@Model.SD_Photo.Replace("~", "../..") target="_blank">View</a>
                                                    <input type="hidden" id="hdnImage" name="hdnImage" value="@Model.SD_Photo">
                                                </div>
                                            }
                                            @*Shoumya*@
                                                @*</div>*@
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">

                                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                        <div class="demo-masked-input">
                                            <div class="input-group">
                                                <div class="form-line">
                                                    <label>Date</label>
                                                    @Html.EditorFor(model => model.SD_AppliactionDate, new { htmlAttributes = new { @class = "form-control date", required = "required", placeholder = "Date" } })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                        <div class="demo-masked-input">
                                            <div class="input-group">
                                                <div class="form-line">
                                                    <label>Session *</label>
                                                    @Html.DropDownList("SD_SessionId", null, "Select Session", new { @class = "form-control show-tick", required = "required" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                        <div class="demo-masked-input">
                                            <div class="input-group">
                                                @*<div class="form-line">*@
                                                <label id="lbl">Gender</label>
                                                <div class="demo-radio-button">                                                 
                                                    <input name="Sd_SexId" type="radio" id="radio_7" class="radio-col-blue-grey" value="M" />
                                                    <label for="radio_7">Male</label>
                                                    <input name="Sd_SexId" type="radio" id="radio_8" class="radio-col-blue-grey" value="F" />
                                                    <label for="radio_8">Female</label>
                                                    <input name="Sd_SexId" type="radio" id="radio_9" class="radio-col-blue-grey" value="O" />
                                                    <label for="radio_9">Others</label>
                                                    @*}*@
                                                </div>
                                            </div>
                                        </div>
                                    </div>                                  
                                </div>
                                <button type="button" id="btnSave" class="btn btn-danger m-t-15 waves-effect" onclick="InsertUpdateAdmissionDataForWeb();">Save</button>                               
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Vertical Layout | With Floating Label -->
        </div>
    </section>
    <!-- Jquery Core Js -->
    <script src="~/Content/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap Colorpicker Js -->
    <script src="~/Content/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.js"></script>
    @*<script src="~/Scripts/jquery.validate.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>*@
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    @*<script src="~/Scripts/AppScripts/Registration.js"></script>*@
    <script src="~/Content/js/pages/forms/advanced-form-elements.js"></script>
    <script src="~/Content/plugins/jquery-inputmask/jquery.inputmask.bundle.js"></script>
    <script src="~/Content/plugins/jquery-inputmask/inputmask/inputmask.js"></script>
    @*<script src="~/Content/js/pages/forms/form-validation.js"></script>*@
    @*<script src="~/Content/js/pages/forms/form-validation.js"></script>*@
    <!-- Custom Js -->
    <script src="~/Content/js/admin.js"></script>
    <script src="~/Content/js/pages/forms/advanced-form-elements.js"></script>
    @*<script src="~/Content/plugins/datepicker/bootstrap-datepicker.js"></script>*@
    <script>
    $('#SD_PinCode').keyup(function () {
        if (!this.value.match(/[0-9]/)) {
            this.value = this.value.replace(/[^0-9]/g, '');
        }
    });
    </script>
    <script src="~/Scripts/Appscript/StudentAdmission.js"></script>

